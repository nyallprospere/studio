/**
 * @fileoverview Firestore Security Rules for the St. Lucia Elections Hub application.
 *
 * Core Philosophy:
 * This ruleset provides open read access to all collections while restricting write access. Write access is denied to all authenticated users.
 *
 * Data Structure:
 * The database consists of several top-level collections: 'parties', 'candidates', 'elections', 'polling_data', 'constituencies', and 'election_results'.
 * Additionally, there are two singleton documents under the 'settings' collection: 'pageLayouts' and 'site'.
 *
 * Key Security Decisions:
 * - Listing of collections is enabled for all users.
 * - No write permissions are granted in this prototyping phase.
 * - No data validation is performed.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows public read access to party data and denies all writes.
     * @path /parties/{partyId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Grants public read access and denies all writes to the party collection.
     */
    match /parties/{partyId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows public read access to candidate data and denies all writes.
     * @path /candidates/{candidateId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Grants public read access and denies all writes to the candidate collection.
     */
    match /candidates/{candidateId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows public read access to election data and denies all writes.
     * @path /elections/{electionId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Grants public read access and denies all writes to the election collection.
     */
    match /elections/{electionId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows public read access to polling data and denies all writes.
     * @path /polling_data/{pollingDataId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Grants public read access and denies all writes to the polling data collection.
     */
    match /polling_data/{pollingDataId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows public read access to constituency data and denies all writes.
     * @path /constituencies/{constituencyId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Grants public read access and denies all writes to the constituency collection.
     */
    match /constituencies/{constituencyId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows public read access to election result data and denies all writes.
     * @path /election_results/{electionResultId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Grants public read access and denies all writes to the election result collection.
     */
    match /election_results/{electionResultId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows public read access to page layouts settings and denies all writes.
     * @path /settings/pageLayouts
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Grants public read access and denies all writes to the page layouts settings.
     */
    match /settings/pageLayouts {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows public read access to site settings and denies all writes.
     * @path /settings/site
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Grants public read access and denies all writes to the site settings.
     */
    match /settings/site {
      allow get, list: if true;
      allow create, update, delete: if false;
    }
  }
}