    }

    /**
     * @description Restricts access to page layouts. No one can read, create, update, or delete page layouts.
     * @path /settings/pageLayouts
     * @allow None
     * @deny (get, list, create, update, delete) - All operations are denied.
     * @principle Restricts all access to page layouts.
     */
    match /settings/pageLayouts {
      allow get, list, create, update, delete: if false;
    }

    /**
     * @description Restricts access to site settings. No one can read, create, update, or delete site settings.
     * @path /settings/site
     * @allow None
     * @deny (get, list, create, update, delete) - All operations are denied.
     * @principle Restricts all access to site settings.
     */
    match /settings/site {
      allow get, list, create, update, delete: if false;
    }

    /**
     * @description Restricts access to user activity. No one can read, create, update, or delete user activity.
     * @path /user_activity/{activityId}
     * @allow None
     * @deny (get, list, create, update, delete) - All operations are denied.
     * @principle Restricts all access to user activity.
     */
    match /user_activity/{activityId} {
      allow get, list, create, update, delete: if false;
    }

     /**
      * @description Restricts access to regions. No one can read, create, update, or delete regions.
      * @path /regions/{regionId}
      * @allow None
      * @deny (get, list, create, update, delete) - All operations are denied.
      * @principle Restricts all access to regions.
      */
    match /regions/{regionId} {
        allow get, list, create, update, delete: if false;
    }

    /**
     * @description Restricts access to user maps. No one can read, create, update, or delete user maps.
     * @path /user_maps/{userMapId}
     * @allow None
     * @deny (get, list, create, update, delete) - All operations are denied.
     * @principle Restricts all access to user maps.
     */
    match /user_maps/{userMapId} {
      allow get, list, create, update, delete: if false;
    }

    /**
     * @description Restricts access to ads. No one can read, create, update, or delete ads.
     * @path /ads/{adId}
     * @allow None
     * @deny (get, list, create, update, delete) - All operations are denied.
     * @principle Restricts all access to ads.
     */
    match /ads/{adId} {
      allow get, list, create, update, delete: if false;
    }
  }

  // Helper function to determine if a user is signed in
  function isSignedIn() {
    return request.auth != null;
  }
}