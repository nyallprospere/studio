/**
 * @fileoverview Firestore Security Rules for the political website.
 *
 * Core Philosophy:
 * This ruleset prioritizes security by restricting access to resources based on strict conditions.
 * The default posture is to deny all access unless explicitly granted.
 *
 * Data Structure:
 * - Top-level collections are used for main entities like `parties`, `candidates`, `elections`, etc.
 * - Subcollections, such as `news/{newsId}/comments/{commentId}`, are used to nest data.
 * - Special single-document paths `settings/pageLayouts` and `settings/site` are used for global settings.
 *
 * Key Security Decisions:
 * - Listing of `reports` is denied to prevent unauthorized access to moderation data.
 *
 *
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Restricts access to mailing list subscriber data.
     * @path /mailing_list_subscribers/{subscriberId}
     * @allow (create) Signed-in user can subscribe to the mailing list.
     * @deny (get, list, update, delete) No one can read, update, or delete subscriber data after creation.
     * @principle Enforces a create-only access model for mailing list subscribers.
     */
    match /mailing_list_subscribers/{subscriberId} {
      allow get, list, update, delete: if false;
      allow create: if isSignedIn();
    }

    /**
     * @description Restricts access to political party data.
     * @path /parties/{partyId}
     * @allow (get, list) Public read access to party data.
     * @deny (create, update, delete) No one can create, update, or delete party data.
     * @principle Enforces read-only access to party data.
     */
    match /parties/{partyId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Restricts access to party logo data.
     * @path /party_logos/{partyLogoId}
     * @allow (get, list) Public read access to party logos.
     * @deny (create, update, delete) No one can create, update, or delete party logo data.
     * @principle Enforces read-only access to party logos.
     */
    match /party_logos/{partyLogoId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Restricts access to political event data.
     * @path /events/{eventId}
     * @allow (get, list) Public read access to event data.
     * @deny (create, update, delete) No one can create, update, or delete event data.
     * @principle Enforces read-only access to event data.
     */
    match /events/{eventId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Restricts access to candidate data.
     * @path /candidates/{candidateId}
     * @allow (get, list) Public read access to candidate data.
     * @deny (create, update, delete) No one can create, update, or delete candidate data.
     * @principle Enforces read-only access to candidate data.
     */
    match /candidates/{candidateId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Restricts access to archived candidate data.
     * @path /archived_candidates/{archivedCandidateId}
     * @allow (get, list) Public read access to archived candidate data.
     * @deny (create, update, delete) No one can create, update, or delete archived candidate data.
     * @principle Enforces read-only access to archived candidate data.
     */
    match /archived_candidates/{archivedCandidateId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Restricts access to election data.
     * @path /elections/{electionId}
     * @allow (get, list) Public read access to election data.
     * @deny (create, update, delete) No one can create, update, or delete election data.
     * @principle Enforces read-only access to election data.
     */
    match /elections/{electionId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Restricts access to polling data.
     * @path /polling_data/{pollingDataId}
     * @allow (get, list) Public read access to polling data.
     * @deny (create, update, delete) No one can create, update, or delete polling data.
     * @principle Enforces read-only access to polling data.
     */
    match /polling_data/{pollingDataId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Restricts access to constituency data.
     * @path /constituencies/{constituencyId}
     * @allow (get, list) Public read access to constituency data.
     * @deny (create, update, delete) No one can create, update, or delete constituency data.
     * @principle Enforces read-only access to constituency data.
     */
    match /constituencies/{constituencyId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Restricts access to election result data.
     * @path /election_results/{electionResultId}
     * @allow (get, list) Public read access to election result data.
     * @deny (create, update, delete) No one can create, update, or delete election result data.
     * @principle Enforces read-only access to election result data.
     */
    match /election_results/{electionResultId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Restricts access to page layout settings.
     * @path /settings/pageLayouts
     * @allow (get) Public read access to page layout settings.
     * @deny (create, list, update, delete) No one can create, list, update, or delete page layout settings.
     * @principle Enforces read-only access to page layout settings.
     */
    match /settings/pageLayouts {
      allow get: if true;
      allow create, list, update, delete: if false;
    }

    /**
     * @description Restricts access to site settings.
     * @path /settings/site
     * @allow (get) Public read access to site settings.
     * @deny (create, list, update, delete) No one can create, list, update, or delete site settings.
     * @principle Enforces read-only access to site settings.
     */
    match /settings/site {
      allow get: if true;
      allow create, list, update, delete: if false;
    }

    /**
     * @description Restricts access to user activity data.
     * @path /user_activity/{activityId}
     * @allow (create) Signed-in user can create activity logs.
     * @deny (get, list, update, delete) No one can read, list, update, or delete user activity data.
     * @principle Enforces a create-only access model for user activity.
     */
    match /user_activity/{activityId} {
      allow get, list, update, delete: if false;
      allow create: if isSignedIn();
    }

    /**
     * @description Restricts access to region data.
     * @path /regions/{regionId}
     * @allow (get, list) Public read access to region data.
     * @deny (create, update, delete) No one can create, update, or delete region data.
     * @principle Enforces read-only access to region data.
     */
    match /regions/{regionId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Restricts access to user map data.
     * @path /user_maps/{userMapId}
     * @allow (create) Signed-in user can create map predictions.
     * @deny (get, list, update, delete) No one can read, list, update, or delete user map data.
     * @principle Enforces a create-only access model for user maps.
     */
    match /user_maps/{userMapId} {
      allow get, list, update, delete: if false;
      allow create: if isSignedIn();
    }

     /**
      * @description Restricts access to ad data.
      * @path /ads/{adId}
      * @allow (get, list) Public read access to ad data.
      * @deny (create, update, delete) No one can create, update, or delete ad data.
      * @principle Enforces read-only access to ad data.
      */
    match /ads/{adId} {
        allow get, list: if true;
        allow create, update, delete: if false;
    }

     /**
      * @description Restricts access to news article data.
      * @path /news/{newsId}
      * @allow (get, list) Public read access to news article data.
      * @deny (create, update, delete) No one can create, update, or delete news article data.
      * @principle Enforces read-only access to news article data.
      */
    match /news/{newsId} {
        allow get, list: if true;
        allow create, update, delete: if false;
    }

    /**
     * @description Restricts access to news article comment data.
     * @path /news/{newsId}/comments/{commentId}
     * @allow (get, list, create) Public read access for getting comments and allowing create.
     * @deny (update, delete) No one can update, or delete news article data.
     * @principle Enforces public read and create, but restricted update and delete to news article comment data.
     */
    match /news/{newsId}/comments/{commentId} {
        allow get, list, create: if true;
        allow update, delete: if false;
    }
        
    /**
     * @description Restricts access to reported comments data.
     * @path /reports/{reportId}
     * @deny (get, list, create, update, delete) No one can get, list, create, update, or delete report data.
     * @principle Enforces that no one can access or modify report data.
     */
    match /reports/{reportId} {
        allow get, list, create, update, delete: if false;
    }

  }

  function isSignedIn() {
    return request.auth != null;
  }

  function isOwner(userId) {
    return request.auth.uid == userId;
  }
}