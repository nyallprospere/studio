/**
 * @file Firebase Security Rules for Revolucianize App
 *
 * @core_philosophy This ruleset prioritizes security by default.  It allows public read access where appropriate (e.g., to constituencies, parties, elections) but restricts write access to authorized users only.  User-specific data and administrative settings are protected.
 * @data_structure The database uses a flat collection structure for most entities (e.g., /parties/{partyId}, /candidates/{candidateId}).  There are a few subcollections (e.g., /news/{newsId}/comments/{commentId}).  The /settings/ collection is used for single-document settings.
 * @key_security_decisions
 *   - Listing of `/mailing_list_subscribers` is disallowed for all clients.
 *   - The `pageLayouts` and `site` documents under the `/settings` collection are publicly readable and writable.
 *   - Most data is publicly readable.
 *   - User-specific write access is not implemented in this iteration.
 *   - No validation of request data beyond auth and existence.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows anyone to read constituencies.
     * @path /databases/{database}/documents/constituencies/{constituencyId}
     * @allow (get, list): Anyone can read constituency data.
     * @deny (create, update, delete): No one can create, update, or delete constituency data.
     * @principle Allows public read access to constituency data.
     */
    match /constituencies/{constituencyId} {
      allow get: if true;
      allow list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Denies listing mailing list subscribers.
     * @path /databases/{database}/documents/mailing_list_subscribers/{subscriberId}
     * @allow create: if true; // Anyone can submit a mailing list subscription.
     * @allow get: if false;
     * @allow list: if false;
     * @allow update: if false;
     * @allow delete: if false;
     * @principle Restricts access to mailing list subscriber data.
     */
    match /mailing_list_subscribers/{subscriberId} {
      allow create: if true;
      allow get, list, update, delete: if false;
    }

    /**
     * @description Allows anyone to read parties.
     * @path /databases/{database}/documents/parties/{partyId}
     * @allow (get, list): Anyone can read party data.
     * @deny (create, update, delete): No one can create, update, or delete party data.
     * @principle Allows public read access to party data.
     */
    match /parties/{partyId} {
      allow get: if true;
      allow list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read party logos.
     * @path /databases/{database}/documents/party_logos/{partyLogoId}
     * @allow (get, list): Anyone can read party logo data.
     * @deny (create, update, delete): No one can create, update, or delete party logo data.
     * @principle Allows public read access to party logo data.
     */
    match /party_logos/{partyLogoId} {
      allow get: if true;
      allow list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read events.
     * @path /databases/{database}/documents/events/{eventId}
     * @allow (get, list): Anyone can read event data.
     * @deny (create, update, delete): No one can create, update, or delete event data.
     * @principle Allows public read access to event data.
     */
    match /events/{eventId} {
      allow get: if true;
      allow list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read candidates.
     * @path /databases/{database}/documents/candidates/{candidateId}
     * @allow (get, list): Anyone can read candidate data.
     * @deny (create, update, delete): No one can create, update, or delete candidate data.
     * @principle Allows public read access to candidate data.
     */
    match /candidates/{candidateId} {
      allow get: if true;
      allow list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read archived candidates.
     * @path /databases/{database}/documents/archived_candidates/{archivedCandidateId}
     * @allow (get, list): Anyone can read archived candidate data.
     * @deny (create, update, delete): No one can create, update, or delete archived candidate data.
     * @principle Allows public read access to archived candidate data.
     */
    match /archived_candidates/{archivedCandidateId} {
      allow get: if true;
      allow list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read elections.
     * @path /databases/{database}/documents/elections/{electionId}
     * @allow (get, list): Anyone can read election data.
     * @deny (create, update, delete): No one can create, update, or delete election data.
     * @principle Allows public read access to election data.
     */
    match /elections/{electionId} {
      allow get: if true;
      allow list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read polling data.
     * @path /databases/{database}/documents/polling_data/{pollingDataId}
     * @allow (get, list): Anyone can read polling data.
     * @deny (create, update, delete): No one can create, update, or delete polling data.
     * @principle Allows public read access to polling data.
     */
    match /polling_data/{pollingDataId} {
      allow get: if true;
      allow list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read election results.
     * @path /databases/{database}/documents/election_results/{electionResultId}
     * @allow (get, list): Anyone can read election result data.
     * @deny (create, update, delete): No one can create, update, or delete election result data.
     * @principle Allows public read access to election result data.
     */
    match /election_results/{electionResultId} {
      allow get: if true;
      allow list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows public read access to page layouts and site settings.
     * @path /databases/{database}/documents/settings/pageLayouts
     * @path /databases/{database}/documents/settings/site
     */
    match /settings/pageLayouts {
        allow get, list, create, update, delete: if true;
    }
    match /settings/site {
        allow get, list, create, update, delete: if true;
    }

    /**
     * @description Allows anyone to read user activity.
     * @path /databases/{database}/documents/user_activity/{activityId}
     * @allow (get, list): Anyone can read user activity data.
     * @deny (create, update, delete): No one can create, update, or delete user activity data.
     * @principle Allows public read access to user activity data.
     */
    match /user_activity/{activityId} {
      allow get: if true;
      allow list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read regions.
     * @path /databases/{database}/documents/regions/{regionId}
     * @allow (get, list): Anyone can read region data.
     * @deny (create, update, delete): No one can create, update, or delete region data.
     * @principle Allows public read access to region data.
     */
    match /regions/{regionId} {
      allow get: if true;
      allow list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read user maps.
     * @path /databases/{database}/documents/user_maps/{userMapId}
     * @allow (get, list): Anyone can read user map data.
     * @deny (create, update, delete): No one can create, update, or delete user map data.
     * @principle Allows public read access to user map data.
     */
    match /user_maps/{userMapId} {
      allow get: if true;
      allow list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read ads.
     * @path /databases/{database}/documents/ads/{adId}
     * @allow (get, list): Anyone can read ad data.
     * @deny (create, update, delete): No one can create, update, or delete ad data.
     * @principle Allows public read access to ad data.
     */
    match /ads/{adId} {
      allow get: if true;
      allow list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read news articles.
     * @path /databases/{database}/documents/news/{newsId}
     * @allow (get, list): Anyone can read news article data.
     * @deny (create, update, delete): No one can create, update, or delete news article data.
     * @principle Allows public read access to news article data.
     */
    match /news/{newsId} {
      allow get: if true;
      allow list: if true;
      allow create, update, delete: if false;

      /**
       * @description Allows anyone to read news article comments.
       * @path /databases/{database}/documents/news/{newsId}/comments/{commentId}
       * @allow (get, list): Anyone can read comment data.
       * @deny (create, update, delete): No one can create, update, or delete comment data.
       * @principle Allows public read access to news article comment data.
       */
      match /comments/{commentId} {
        allow get: if true;
        allow list: if true;
        allow create, update, delete: if false;
      }
    }

     /**
      * @description Allows anyone to create reports.
      * @path /databases/{database}/documents/reports/{reportId}
      * @allow create: if true;
      * @deny (get, list, update, delete): Only trusted server environments should be able to access reports.
      * @principle Restricts read access to reported comments for moderation purposes.
      */
    match /reports/{reportId} {
        allow create: if true;
        allow get, list, update, delete: if false;
    }
  }
}