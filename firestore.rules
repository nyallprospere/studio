/**
 * @file Overview
 * This ruleset enforces a role-based access control model with a focus on admin-only writes
 * and public or authenticated reads where appropriate.
 *
 * Data Structure:
 * - Top-level collections: `/parties`, `/events`, `/candidates`, etc.
 * - Nested collections: `/news/{newsId}/comments/{commentId}`.
 * - Single-document settings: `/settings/pageLayouts`, `/settings/site`.
 *
 * Key Security Decisions:
 * - Read-only collections (where all documents are public) are readable by anyone.
 * - Most collections are read-only for non-admins, with admin-only writes.
 * - User listing is generally disallowed unless explicitly required.
 *
 * Denormalization for Authorization:
 *   No denormalization is explicitly needed as we rely on admin authentication
 *   and public read access where appropriate.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows admins to manage mailing list subscribers.
     * @path /mailing_list_subscribers/{subscriberId}
     * @allow (create, update, delete) - Authenticated admin user.
     * @allow (get, list) - Public read access.
     * @deny (create, update, delete) - Non-authenticated user.
     * @principle Enforces admin-only writes and public reads.
     */
    match /mailing_list_subscribers/{subscriberId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows admins to manage political parties.
     * @path /parties/{partyId}
     * @allow (create, update, delete) - Authenticated admin user.
     * @allow (get, list) - Public read access.
     * @deny (create, update, delete) - Non-authenticated user.
     * @principle Enforces admin-only writes and public reads.
     */
    match /parties/{partyId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows admins to manage party logos.
     * @path /party_logos/{partyLogoId}
     * @allow (create, update, delete) - Authenticated admin user.
     * @allow (get, list) - Public read access.
     * @deny (create, update, delete) - Non-authenticated user.
     * @principle Enforces admin-only writes and public reads.
     */
    match /party_logos/{partyLogoId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows admins to manage political events.
     * @path /events/{eventId}
     * @allow (create, update, delete) - Authenticated admin user.
     * @allow (get, list) - Public read access.
     * @deny (create, update, delete) - Non-authenticated user.
     * @principle Enforces admin-only writes and public reads.
     */
    match /events/{eventId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows admins to manage candidates.
     * @path /candidates/{candidateId}
     * @allow (create, update, delete) - Authenticated admin user.
     * @allow (get, list) - Public read access.
     * @deny (create, update, delete) - Non-authenticated user.
     * @principle Enforces admin-only writes and public reads.
     */
    match /candidates/{candidateId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows admins to manage archived candidates.
     * @path /archived_candidates/{archivedCandidateId}
     * @allow (create, update, delete) - Authenticated admin user.
     * @allow (get, list) - Public read access.
     * @deny (create, update, delete) - Non-authenticated user.
     * @principle Enforces admin-only writes and public reads.
     */
    match /archived_candidates/{archivedCandidateId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows admins to manage elections.
     * @path /elections/{electionId}
     * @allow (create, update, delete) - Authenticated admin user.
     * @allow (get, list) - Public read access.
     * @deny (create, update, delete) - Non-authenticated user.
     * @principle Enforces admin-only writes and public reads.
     */
    match /elections/{electionId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows admins to manage polling data.
     * @path /polling_data/{pollingDataId}
     * @allow (create, update, delete) - Authenticated admin user.
     * @allow (get, list) - Public read access.
     * @deny (create, update, delete) - Non-authenticated user.
     * @principle Enforces admin-only writes and public reads.
     */
    match /polling_data/{pollingDataId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows admins to manage constituencies.
     * @path /constituencies/{constituencyId}
     * @allow (create, update, delete) - Authenticated admin user.
     * @allow (get, list) - Public read access.
     * @deny (create, update, delete) - Non-authenticated user.
     * @principle Enforces admin-only writes and public reads.
     */
    match /constituencies/{constituencyId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows admins to manage election results.
     * @path /election_results/{electionResultId}
     * @allow (create, update, delete) - Authenticated admin user.
     * @allow (get, list) - Public read access.
     * @deny (create, update, delete) - Non-authenticated user.
     * @principle Enforces admin-only writes and public reads.
     */
    match /election_results/{electionResultId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows admins to manage page layouts.
     * @path /settings/pageLayouts
     * @allow (create, update, delete) - Authenticated admin user.
     * @allow (get) - Public read access.
     * @allow list: if false;
     * @deny (create, update, delete) - Non-authenticated user.
     * @principle Enforces admin-only writes and public reads for a single settings document.
     */
    match /settings/pageLayouts {
      allow get: if true;
      allow list: if false;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows admins to manage site settings.
     * @path /settings/site
     * @allow (create, update, delete) - Authenticated admin user.
     * @allow (get) - Public read access.
     * @allow list: if false;
     * @deny (create, update, delete) - Non-authenticated user.
     * @principle Enforces admin-only writes and public reads for a single settings document.
     */
    match /settings/site {
      allow get: if true;
      allow list: if false;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows logging of user activity.
     * @path /user_activity/{activityId}
     * @allow create: if true;
     * @allow get, list, update, delete: if false;
     * @principle Allows anyone to create a log entry.
     */
    match /user_activity/{activityId} {
        allow create: if true;
        allow get, list, update, delete: if false;
    }

    /**
     * @description Allows admins to manage regions.
     * @path /regions/{regionId}
     * @allow (create, update, delete) - Authenticated admin user.
     * @allow (get, list) - Public read access.
     * @deny (create, update, delete) - Non-authenticated user.
     * @principle Enforces admin-only writes and public reads.
     */
    match /regions/{regionId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows authenticated users to create user maps.
     * @path /user_maps/{userMapId}
     * @allow create: if isSignedIn();
     * @allow get, list, update, delete: if false;
     */
    match /user_maps/{userMapId} {
      allow create: if isSignedIn();
      allow get, list, update, delete: if false;
    }

    /**
     * @description Allows admins to manage ads.
     * @path /ads/{adId}
     * @allow (create, update, delete) - Authenticated admin user.
     * @allow (get, list) - Public read access.
     * @deny (create, update, delete) - Non-authenticated user.
     * @principle Enforces admin-only writes and public reads.
     */
    match /ads/{adId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows admins to manage news articles.
     * @path /news/{newsId}
     * @allow (create, update, delete) - Authenticated admin user.
     * @allow (get, list) - Public read access.
     * @deny (create, update, delete) - Non-authenticated user.
     * @principle Enforces admin-only writes and public reads.
     */
    match /news/{newsId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();

      /**
       * @description Allows authenticated users to create comments on news articles.
       * @path /news/{newsId}/comments/{commentId}
       */
      match /comments/{commentId} {
          allow create: if isSignedIn();
          allow get, list: if true;
          allow update, delete: if false;
      }
    }

    /**
     * @description Allows admins to manage reports.
     * @path /reports/{reportId}
     * @allow (create, update, delete) - Authenticated admin user.
     * @allow (get, list) - Public read access.
     * @deny (create, update, delete) - Non-authenticated user.
     * @principle Enforces admin-only writes and public reads.
     */
    match /reports/{reportId} {
        allow get, list: if isSignedIn();
        allow create, update, delete: if false;
    }

    /**
     * @description Allows admins to manage constituency projections.
     * @path /constituency_projections/{projectionId}
     * @allow (create, update, delete) - Authenticated admin user.
     * @allow (get, list) - Public read access.
     * @deny (create, update, delete) - Non-authenticated user.
     * @principle Enforces admin-only writes and public reads.
     */
    match /constituency_projections/{projectionId} {
        allow get, list: if true;
        allow create, update, delete: if isSignedIn();
    }

     /**
      * @description Allows admins to manage voter information.
      * @path /voter_information/{infoId}
      * @allow (create, update, delete) - Authenticated admin user.
      * @allow (get, list) - Public read access.
      * @deny (create, update, delete) - Non-authenticated user.
      * @principle Enforces admin-only writes and public reads.
      */
    match /voter_information/{infoId} {
        allow get, list: if true;
        allow create, update, delete: if isSignedIn();
    }
  }

  /**
   * @description Checks if the user is signed in.
   */
  function isSignedIn() {
    return request.auth != null;
  }
}