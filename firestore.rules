/**
 * @fileoverview Firestore Security Rules for the Revolucianize application.
 *
 * Core Philosophy:
 * This ruleset prioritizes security by enforcing strict access control.
 * Public read access is granted sparingly, and write access is generally restricted to authenticated users or specific roles.
 *
 * Data Structure:
 * The Firestore database contains collections for various entities, including parties, candidates, elections, constituencies, news, and user-generated content.
 *
 * Key Security Decisions:
 * - Parties are publicly listable, but modifications are disallowed in this prototyping phase.
 * - User-specific data (e.g., user activity) is stored in a way that prevents listing by other users.
 * - Read/write access to user maps and ad data is not currently defined, defaulting to locked-down rules.
 *
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows anyone to read mailing list subscriber data, but restricts writes.
     * @path /mailing_list_subscribers/{subscriberId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Public read, no write access.
     */
    match /mailing_list_subscribers/{subscriberId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read Parties, but restricts writes.
     * @path /parties/{partyId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Public read, no write access.
     */
    match /parties/{partyId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read Party Logos, but restricts writes.
     * @path /party_logos/{partyLogoId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Public read, no write access.
     */
    match /party_logos/{partyLogoId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read Events, but restricts writes.
     * @path /events/{eventId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Public read, no write access.
     */
    match /events/{eventId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read Candidates, but restricts writes.
     * @path /candidates/{candidateId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Public read, no write access.
     */
    match /candidates/{candidateId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read Archived Candidates, but restricts writes.
     * @path /archived_candidates/{archivedCandidateId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Public read, no write access.
     */
    match /archived_candidates/{archivedCandidateId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read Elections, but restricts writes.
     * @path /elections/{electionId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Public read, no write access.
     */
    match /elections/{electionId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read Polling Data, but restricts writes.
     * @path /polling_data/{pollingDataId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Public read, no write access.
     */
    match /polling_data/{pollingDataId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read Constituencies, but restricts writes.
     * @path /constituencies/{constituencyId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Public read, no write access.
     */
    match /constituencies/{constituencyId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read Election Results, but restricts writes.
     * @path /election_results/{electionResultId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Public read, no write access.
     */
    match /election_results/{electionResultId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read the Page Layouts, but restricts writes.
     * @path /settings/pageLayouts
     * @allow get: if true;
     * @deny list, create, update, delete: if false;
     * @principle Public read, no write access.
     */
    match /settings/pageLayouts {
      allow get: if true;
      allow list, create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read the Site Settings, but restricts writes.
     * @path /settings/site
     * @allow get: if true;
     * @deny list, create, update, delete: if false;
     * @principle Public read, no write access.
     */
    match /settings/site {
      allow get: if true;
      allow list, create, update, delete: if false;
    }

    /**
     * @description  Restricts access to user activity to prevent listing or modification.
     * @path /user_activity/{activityId}
     * @allow get: if false;
     * @deny list, create, update, delete: if false;
     * @principle Prevents unauthorized access to user activity data.
     */
    match /user_activity/{activityId} {
        allow get: if false;
        allow list, create, update, delete: if false;
    }

   /**
     * @description Allows anyone to read Regions, but restricts writes.
     * @path /regions/{regionId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Public read, no write access.
     */
    match /regions/{regionId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

   /**
     * @description  Restricts access to user maps.
     * @path /user_maps/{userMapId}
     * @allow get: if false;
     * @deny list, create, update, delete: if false;
     * @principle Prevents unauthorized access to user created maps.
     */
     match /user_maps/{userMapId} {
        allow get: if false;
        allow list, create, update, delete: if false;
    }

   /**
     * @description  Restricts access to ads.
     * @path /ads/{adId}
     * @allow get: if false;
     * @deny list, create, update, delete: if false;
     * @principle Prevents unauthorized access to ad configuration.
     */
     match /ads/{adId} {
        allow get: if false;
        allow list, create, update, delete: if false;
    }

   /**
     * @description Allows anyone to read News Articles, but restricts writes.
     * @path /news/{newsId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Public read, no write access.
     */
    match /news/{newsId} {
      allow get, list: if true;
      allow create, update, delete: if false;

       /**
        * @description  Restricts access to News Article Comments.
        * @path /news/{newsId}/comments/{commentId}
        * @allow get: if false;
        * @deny list, create, update, delete: if false;
        * @principle Prevents unauthorized access to user created maps.
        */
      match /comments/{commentId} {
        allow get: if false;
        allow list, create, update, delete: if false;
      }
    }

    /**
     * @description  Restricts access to Reports
     * @path /reports/{reportId}
     * @allow get: if false;
     * @deny list, create, update, delete: if false;
     * @principle Prevents unauthorized access to user created maps.
     */
     match /reports/{reportId} {
        allow get: if false;
        allow list, create, update, delete: if false;
    }
  }
}