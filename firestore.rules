/**
 * @fileoverview Firestore Security Rules for the Saint Lucia Elections Platform.
 *
 * Core Philosophy:
 * This ruleset prioritizes security by default, enforcing strict authorization
 * for all data access. Data validation is relaxed in this prototyping phase to
 * allow for rapid development and schema iteration.
 *
 * Data Structure:
 * The Firestore database is organized into top-level collections for core
 * entities like candidates, parties, elections, constituencies, and news.
 * User-related data, such as activity logs and user-created maps, are stored
 * in separate collections.
 *
 * Key Security Decisions:
 * - All write operations (create, update, delete) require user authentication.
 * - List operations are generally allowed unless specifically restricted.
 * - Data validation is minimal, focusing on authorization-critical fields.
 * - The ruleset does not enforce complex schema validation, such as data types or
 *   required fields, except for relational integrity (ownership).
 * - Access to candidate data will be granted to all logged in users.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows anyone to read mailing list subscribers, but requires authentication to write.
     * @path /mailing_list_subscribers/{subscriberId}
     * @allow (get, list): if true
     * @allow (create, update, delete): if isSignedIn()
     * @deny (create): if false
     * @deny (update): if false
     * @deny (delete): if false
     * @principle Public read, auth required write.
     */
    match /mailing_list_subscribers/{subscriberId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows anyone to read parties, but requires authentication to write.
     * @path /parties/{partyId}
     * @allow (get, list): if true
     * @allow (create, update, delete): if isSignedIn()
     * @deny (create): if false
     * @deny (update): if false
     * @deny (delete): if false
     * @principle Public read, auth required write.
     */
    match /parties/{partyId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows anyone to read party logos, but requires authentication to write.
     * @path /party_logos/{partyLogoId}
     * @allow (get, list): if true
     * @allow (create, update, delete): if isSignedIn()
     * @deny (create): if false
     * @deny (update): if false
     * @deny (delete): if false
     * @principle Public read, auth required write.
     */
    match /party_logos/{partyLogoId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows anyone to read events, but requires authentication to write.
     * @path /events/{eventId}
     * @allow (get, list): if true
     * @allow (create, update, delete): if isSignedIn()
     * @deny (create): if false
     * @deny (update): if false
     * @deny (delete): if false
     * @principle Public read, auth required write.
     */
    match /events/{eventId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows any signed-in user to manage candidates.
     * @path /candidates/{candidateId}
     * @allow (get, list): if true
     * @allow (create, update, delete): if isSignedIn()
     * @deny (create): if false
     * @deny (update): if false
     * @deny (delete): if false
     * @principle Any signed-in user can manage candidates
     */
    match /candidates/{candidateId} {
        allow get, list: if true;
        allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows anyone to read archived candidates, but requires authentication to write.
     * @path /archived_candidates/{archivedCandidateId}
     * @allow (get, list): if true
     * @allow (create, update, delete): if isSignedIn()
     * @deny (create): if false
     * @deny (update): if false
     * @deny (delete): if false
     * @principle Public read, auth required write.
     */
    match /archived_candidates/{archivedCandidateId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows anyone to read elections, but requires authentication to write.
     * @path /elections/{electionId}
     * @allow (get, list): if true
     * @allow (create, update, delete): if isSignedIn()
     * @deny (create): if false
     * @deny (update): if false
     * @deny (delete): if false
     * @principle Public read, auth required write.
     */
    match /elections/{electionId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows anyone to read polling data, but requires authentication to write.
     * @path /polling_data/{pollingDataId}
     * @allow (get, list): if true
     * @allow (create, update, delete): if isSignedIn()
     * @deny (create): if false
     * @deny (update): if false
     * @deny (delete): if false
     * @principle Public read, auth required write.
     */
    match /polling_data/{pollingDataId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows anyone to read constituencies, but requires authentication to write.
     * @path /constituencies/{constituencyId}
     * @allow (get, list): if true
     * @allow (create, update, delete): if isSignedIn()
     * @deny (create): if false
     * @deny (update): if false
     * @deny (delete): if false
     * @principle Public read, auth required write.
     */
    match /constituencies/{constituencyId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows anyone to read election results, but requires authentication to write.
     * @path /election_results/{electionResultId}
     * @allow (get, list): if true
     * @allow (create, update, delete): if isSignedIn()
