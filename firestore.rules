rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows anyone to read site settings, but no one to write.
     * @path /settings/site
     * @allow (get, list): Always.
     * @deny (create, update, delete): Always.
     * @principle Public read-only access for global site settings.
     */
    match /settings/site {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows anyone to read page layouts, but no one to write.
     * @path /settings/pageLayouts
     * @allow (get, list): Always.
     * @deny (create, update, delete): Always.
     * @principle Public read-only access for page layout settings.
     */
    match /settings/pageLayouts {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows anyone to read party information, but no one to write.
     * @path /parties/{partyId}
     * @allow (get, list): Always.
     * @deny (create, update, delete): Always.
     * @principle Public read-only access for party data.
     */
    match /parties/{partyId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows anyone to read party logo information, but no one to write.
     * @path /party_logos/{partyLogoId}
     * @allow (get, list): Always.
     * @deny (create, update, delete): Always.
     * @principle Public read-only access for party logo data.
     */
    match /party_logos/{partyLogoId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows anyone to read event information, but no one to write.
     * @path /events/{eventId}
     * @allow (get, list): Always.
     * @deny (create, update, delete): Always.
     * @principle Public read-only access for event data.
     */
    match /events/{eventId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows anyone to read candidate information, but no one to write.
     * @path /candidates/{candidateId}
     * @allow (get, list): Always.
     * @deny (create, update, delete): Always.
     * @principle Public read-only access for candidate data.
     */
    match /candidates/{candidateId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows anyone to read archived candidate information, but no one to write.
     * @path /archived_candidates/{archivedCandidateId}
     * @allow (get, list): Always.
     * @deny (create, update, delete): Always.
     * @principle Public read-only access for archived candidate data.
     */
    match /archived_candidates/{archivedCandidateId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows anyone to read election information, but no one to write.
     * @path /elections/{electionId}
     * @allow (get, list): Always.
     * @deny (create, update, delete): Always.
     * @principle Public read-only access for election data.
     */
    match /elections/{electionId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows anyone to read polling data, but no one to write.
     * @path /polling_data/{pollingDataId}
     * @allow (get, list): Always.
     * @deny (create, update, delete): Always.
     * @principle Public read-only access for polling data.
     */
    match /polling_data/{pollingDataId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows anyone to read constituency information, but no one to write.
     * @path /constituencies/{constituencyId}
     * @allow (get, list): Always.
     * @deny (create, update, delete): Always.
     * @principle Public read-only access for constituency data.
     */
    match /constituencies/{constituencyId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows anyone to read election result information, but no one to write.
     * @path /election_results/{electionResultId}
     * @allow (get, list): Always.
     * @deny (create, update, delete): Always.
     * @principle Public read-only access for election result data.
     */
    match /election_results/{electionResultId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows anyone to read ads, but no one to write.
     * @path /ads/{adId}
     * @allow (get, list): Always.
     * @deny (create, update, delete): Always.
     * @principle Public read-only access for ads.
     */
    match /ads/{adId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

   /**
    * @description Allows anyone to read news articles, but no one to write.
    * @path /news/{newsId}
    * @allow (get, list): Always.
    * @deny (create, update, delete): Always.
    * @principle Public read-only access for news articles.
    */
    match /news/{newsId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;

      /**
       * @description Allows anyone to read comments, but no one to write.
       * @path /news/{newsId}/comments/{commentId}
       * @allow (get, list): Always.
       * @deny (create, update, delete): Always.
       * @principle Public read-only access for comments.
       */
      match /comments/{commentId} {
        allow get: if true;
        allow list: if true;
        allow create: if false;
        allow update: if false;
        allow delete: if false;
      }
    }

    /**
     * @description Allows anyone to read reports, but no one to write.
     * @path /reports/{reportId}
     * @allow (get, list): Always.
     * @deny (create, update, delete): Always.
     * @principle Public read-only access for reports.
     */
    match /reports/{reportId} {
        allow get: if true;
        allow list: if true;
        allow create: if false;
        allow update: if false;
        allow delete: if false;
    }

    /**
     * @description Allows only authenticated users to create, read, update, and delete their own activity logs.
     * @path /user_activity/{activityId}
     * @allow (create): If the user is signed in.
     * @allow (get, list): if isOwner(userId);
     * @allow (update, delete): if isExistingOwner(userId);
     * @deny (create): if user is not signed in
     * @deny (update, delete): if the activity log doesn't exist.
     * @principle Enforces document ownership for writes; signed-in required for creation
     */
    match /user_activity/{activityId} {
      allow get: if isSignedIn() && isOwner(resource.data.userId);
      allow list: if isSignedIn() && request.auth.uid == resource.data.userId;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isSignedIn() && isOwner(resource.data.userId);
      allow delete: if isSignedIn() && isOwner(resource.data.userId);
    }

     /**
      * @description Allows anyone to read region information, but no one to write.
      * @path /regions/{regionId}
      * @allow (get, list): Always.
      * @deny (create, update, delete): Always.
      * @principle Public read-only access for regions data.
      */
    match /regions/{regionId} {
        allow get: if true;
        allow list: if true;
        allow create: if false;
        allow update: if false;
        allow delete: if false;
    }

    /**
     * @description Allows only authenticated users to create, read, update, and delete their own maps.
     * @path /user_maps/{userMapId}
     * @allow (create): If the user is signed in.
     * @allow (get, list): if isOwner(userId);
     * @allow (update, delete): if isExistingOwner(userId);
     * @deny (create): if user is not signed in
     * @deny (update, delete): if the activity log doesn't exist.
     */
    match /user_maps/{userMapId} {
        allow get: if isSignedIn() && isOwner(resource.data.userId);
        allow list: if isSignedIn() && request.auth.uid == resource.data.userId;
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow update: if isSignedIn() && isOwner(resource.data.userId);
        allow delete: if isSignedIn() && isOwner(resource.data.userId);
    }

    /**
     * @description Allows only authenticated users to create mailing list subscribers.
     * @path /mailing_list_subscribers/{subscriberId}
     * @allow (create): If the user is signed in.
     */
    match /mailing_list_subscribers/{subscriberId} {
        allow get: if isSignedIn() && isOwner(resource.data.userId);
        allow list: if isSignedIn() && request.auth.uid == resource.data.userId;
        allow create: if isSignedIn() && request.auth.uid == request.resource.data.userId;
        allow update: if isSignedIn() && isOwner(resource.data.userId);
        allow delete: if isSignedIn() && isOwner(resource.data.userId);
    }

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }
  }
}