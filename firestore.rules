    /**
     * @description Rules for the pageLayouts document.
     * @path /settings/pageLayouts
     * @allow (read) Only admins can read.
     * @allow (write) Only admins can write.
     * @deny (read) Non-admins cannot read.
     * @deny (write) Non-admins cannot write.
     * @principle Restricts access to admins only.
     */
    match /settings/pageLayouts {
      allow get, list: if isAdmin();
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    /**
     * @description Rules for the site settings document.
     * @path /settings/site
     * @allow (read) Only admins can read.
     * @allow (write) Only admins can write.
     * @deny (read) Non-admins cannot read.
     * @deny (write) Non-admins cannot write.
     * @principle Restricts access to admins only.
     */
    match /settings/site {
      allow get, list: if isAdmin();
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    /**
     * @description Rules for the user_activity collection.
     * @path /user_activity/{activityId}
