/**
 * @fileoverview Firestore Security Rules for St. Lucia Elections Hub application.
 *
 * Core Philosophy:
 * This ruleset adopts an admin-only access model. Only authenticated users are allowed, but the data model doesn't include any user or roles. Therefore, this ruleset implements a base level of protection by blocking all data access.
 *
 * Data Structure:
 * The Firestore database contains several top-level collections: `parties`, `candidates`, `elections`, `polling_data`, `constituencies`, `election_results`, and `settings`. The `settings` collection contains the documents: `pageLayouts` and `site`.
 *
 * Key Security Decisions:
 * - Strict Denial: All read and write operations are explicitly denied unless overridden by a specific rule.
 * - No User Listing: Listing all users is disallowed.
 * - Denormalization for Authorization: This ruleset avoids costly `get()` calls by assuming that all authorization data will be present within the document being secured, although, this has not been implemented as admin-only access has been enforced.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Enforces admin-only access for all parties.
     * @path /parties/{partyId}
     * @allow (create) - Denied. Admins are not yet implemented.
     * @allow (update) - Denied. Admins are not yet implemented.
     * @allow (delete) - Denied. Admins are not yet implemented.
     * @allow (get) - Denied. Admins are not yet implemented.
     * @allow (list) - Denied. Admins are not yet implemented.
     * @deny create: if true;
     * @deny update: if true;
     * @deny delete: if true;
     * @deny get: if true;
     * @deny list: if true;
     * @principle Restricts all access to party data.
     */
    match /parties/{partyId} {
      allow create: if false;
      allow update: if false;
      allow delete: if false;
      allow get: if false;
      allow list: if false;
    }

    /**
     * @description Enforces admin-only access for all candidates.
     * @path /candidates/{candidateId}
     * @allow (create) - Denied. Admins are not yet implemented.
     * @allow (update) - Denied. Admins are not yet implemented.
     * @allow (delete) - Denied. Admins are not yet implemented.
     * @allow (get) - Denied. Admins are not yet implemented.
     * @allow (list) - Denied. Admins are not yet implemented.
     * @deny create: if true;
     * @deny update: if true;
     * @deny delete: if true;
     * @deny get: if true;
     * @deny list: if true;
     * @principle Restricts all access to candidate data.
     */
    match /candidates/{candidateId} {
      allow create: if false;
      allow update: if false;
      allow delete: if false;
      allow get: if false;
      allow list: if false;
    }

    /**
     * @description Enforces admin-only access for all elections.
     * @path /elections/{electionId}
     * @allow (create) - Denied. Admins are not yet implemented.
     * @allow (update) - Denied. Admins are not yet implemented.
     * @allow (delete) - Denied. Admins are not yet implemented.
     * @allow (get) - Denied. Admins are not yet implemented.
     * @allow (list) - Denied. Admins are not yet implemented.
     * @deny create: if true;
     * @deny update: if true;
     * @deny delete: if true;
     * @deny get: if true;
     * @deny list: if false;
     * @principle Restricts all access to election data.
     */
    match /elections/{electionId} {
      allow create: if false;
      allow update: if false;
      allow delete: if false;
      allow get: if false;
      allow list: if false;
    }

    /**
     * @description Enforces admin-only access for all polling data.
     * @path /polling_data/{pollingDataId}
     * @allow (create) - Denied. Admins are not yet implemented.
     * @allow (update) - Denied. Admins are not yet implemented.
     * @allow (delete) - Denied. Admins are not yet implemented.
     * @allow (get) - Denied. Admins are not yet implemented.
     * @allow (list) - Denied. Admins are not yet implemented.
     * @deny create: if true;
     * @deny update: if true;
     * @deny delete: if true;
     * @deny get: if true;
     * @deny list: if true;
     * @principle Restricts all access to polling data.
     */
    match /polling_data/{pollingDataId} {
      allow create: if false;
      allow update: if false;
      allow delete: if false;
      allow get: if false;
      allow list: if false;
    }

    /**
     * @description Enforces admin-only access for all constituencies.
     * @path /constituencies/{constituencyId}
     * @allow (create) - Denied. Admins are not yet implemented.
     * @allow (update) - Denied. Admins are not yet implemented.
     * @allow (delete) - Denied. Admins are not yet implemented.
     * @allow (get) - Denied. Admins are not yet implemented.
     * @allow (list) - Denied. Admins are not yet implemented.
     * @deny create: if true;
     * @deny update: if true;
     * @deny delete: if true;
     * @deny get: if true;
     * @deny list: if true;
     * @principle Restricts all access to constituency data.
     */
    match /constituencies/{constituencyId} {
      allow create: if false;
      allow update: if false;
      allow delete: if false;
      allow get: if false;
      allow list: if false;
    }

    /**
     * @description Enforces admin-only access for all election results.
     * @path /election_results/{electionResultId}
     * @allow (create) - Denied. Admins are not yet implemented.
     * @allow (update) - Denied. Admins are not yet implemented.
     * @allow (delete) - Denied. Admins are not yet implemented.
     * @allow (get) - Denied. Admins are not yet implemented.
     * @allow (list) - Denied. Admins are not yet implemented.
     * @deny create: if true;
     * @deny update: if true;
     * @deny delete: if true;
     * @deny get: if true;
     * @deny list: if true;
     * @principle Restricts all access to election result data.
     */
    match /election_results/{electionResultId} {
      allow create: if false;
      allow update: if false;
      allow delete: if false;
      allow get: if false;
      allow list: if false;
    }

    /**
     * @description Enforces admin-only access for page layouts settings.
     * @path /settings/pageLayouts
     * @allow (create) - Denied. Admins are not yet implemented.
     * @allow (update) - Denied. Admins are not yet implemented.
     * @allow (delete) - Denied. Admins are not yet implemented.
     * @allow (get) - Denied. Admins are not yet implemented.
     * @allow (list) - Denied. Admins are not yet implemented.
     * @deny create: if true;
     * @deny update: if true;
     * @deny delete: if true;
     * @deny get: if false;
     * @deny list: if false;
     * @principle Restricts all access to page layouts settings.
     */
    match /settings/pageLayouts {
      allow create: if false;
      allow update: if false;
      allow delete: if false;
      allow get: if false;
      allow list: if false;
    }

    /**
     * @description Enforces admin-only access for site settings.
     * @path /settings/site
     * @allow (create) - Denied. Admins are not yet implemented.
     * @allow (update) - Denied. Admins are not yet implemented.
     * @allow (delete) - Denied. Admins are not yet implemented.
     * @allow (get) - Denied. Admins are not yet implemented.
     * @allow (list) - Denied. Admins are not yet implemented.
     * @deny create: if true;
     * @deny update: if true;
     * @deny delete: if true;
     * @deny get: if false;
     * @deny list: if false;
     * @principle Restricts all access to site settings.
     */
    match /settings/site {
      allow create: if false;
      allow update: if false;
      allow delete: if false;
      allow get: if false;
      allow list: if false;
    }
  }
}