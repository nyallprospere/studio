/**
 * @fileoverview Firestore Security Rules for the Revolucianize app.
 *
 * Core Philosophy:
 * This ruleset prioritizes security by enforcing strict access control based on
 * authentication.  It allows public read access for some collections while
 * restricting write access to authorized users. It assumes a prototype mode, so
 * schema validation is relaxed, but authorization checks are strictly enforced.
 *
 * Data Structure:
 * The Firestore database contains collections for various entities, including
 * constituencies, candidates, parties, elections, news articles, user activity, and site settings.
 *
 * Key Security Decisions:
 * - User listing is generally disallowed unless specifically required.
 * - Public read access is granted only to collections explicitly intended for public consumption.
 * - All write operations are protected by authentication checks.
 * - The `settings/pageLayouts` and `settings/site` paths are secured against unauthorized modifications.
 *
 * Denormalization for Authorization:
 * This ruleset does not rely on denormalization.  All authorization decisions
 * are made based on the current user's authentication state.
 *
 * Structural Segregation:
 * The data model does not currently require structural segregation.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows anyone to read, but only authenticated users to create mailing list subscribers.
     * @path /mailing_list_subscribers/{subscriberId}
     * @allow (get, list): if true
     * @allow (create): if isSignedIn()
     * @deny (update, delete): if true
     * @principle Allows public reads, but secures writes to authenticated users.
     */
    match /mailing_list_subscribers/{subscriberId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update, delete: if false;
    }

    /**
     * @description Allows anyone to read, but no one to write parties.
     * @path /parties/{partyId}
     * @allow (get, list): if true
     * @deny (create, update, delete): if true
     * @principle Allows public reads, but secures writes from all users.
     */
    match /parties/{partyId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read party logos, but no one to modify them.
     * @path /party_logos/{partyLogoId}
     * @allow (get, list): if true
     * @deny (create, update, delete): if true
     * @principle Allows public reads, but secures writes from all users.
     */
    match /party_logos/{partyLogoId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read events, but no one to modify them.
     * @path /events/{eventId}
     * @allow (get, list): if true
     * @deny (create, update, delete): if true
     * @principle Allows public reads, but secures writes from all users.
     */
    match /events/{eventId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read candidates, but no one to modify them.
     * @path /candidates/{candidateId}
     * @allow (get, list): if true
     * @deny (create, update, delete): if true
     * @principle Allows public reads, but secures writes from all users.
     */
    match /candidates/{candidateId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read archived candidates, but no one to modify them.
     * @path /archived_candidates/{archivedCandidateId}
     * @allow (get, list): if true
     * @deny (create, update, delete): if true
     * @principle Allows public reads, but secures writes from all users.
     */
    match /archived_candidates/{archivedCandidateId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read elections, but no one to modify them.
     * @path /elections/{electionId}
     * @allow (get, list): if true
     * @deny (create, update, delete): if true
     * @principle Allows public reads, but secures writes from all users.
     */
    match /elections/{electionId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read polling data, but no one to modify them.
     * @path /polling_data/{pollingDataId}
     * @allow (get, list): if true
     * @deny (create, update, delete): if true
     * @principle Allows public reads, but secures writes from all users.
     */
    match /polling_data/{pollingDataId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read constituencies, but no one to modify them.
     * @path /constituencies/{constituencyId}
     * @allow (get, list): if true
     * @deny (create, update, delete): if true
     * @principle Allows public reads, but secures writes from all users.
     */
    match /constituencies/{constituencyId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read election results, but no one to modify them.
     * @path /election_results/{electionResultId}
     * @allow (get, list): if true
     * @deny (create, update, delete): if true
     * @principle Allows public reads, but secures writes from all users.
     */
    match /election_results/{electionResultId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Restricts read and write access to the pageLayouts document.
     * @path /settings/pageLayouts
     * @deny (get, list, create, update, delete): if true
     * @principle Secures the single `pageLayouts` document from all access.
     */
    match /settings/pageLayouts {
       allow get, list, create, update, delete: if false;
    }

    /**
     * @description Restricts read and write access to the site settings document.
     * @path /settings/site
     * @deny (get, list, create, update, delete): if true
     * @principle Secures the single `site` document from all access.
     */
    match /settings/site {
       allow get, list, create, update, delete: if false;
    }

    /**
     * @description Allows anyone to create user activity logs, but restricts reads.
     * @path /user_activity/{activityId}
     * @allow (create): if true
     * @deny (get, list, update, delete): if true
     * @principle Allows creating activity logs, but secures them from reading.
     */
    match /user_activity/{activityId} {
      allow create: if true;
      allow get, list, update, delete: if false;
    }

    /**
     * @description Allows anyone to read regions, but no one to modify them.
     * @path /regions/{regionId}
     * @allow (get, list): if true
     * @deny (create, update, delete): if true
     * @principle Allows public reads, but secures writes from all users.
     */
    match /regions/{regionId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to create user maps, but restricts reads.
     * @path /user_maps/{userMapId}
     * @allow (create): if true
     * @deny (get, list, update, delete): if true
     * @principle Allows creating user maps, but secures them from reading.
     */
    match /user_maps/{userMapId} {
      allow create: if true;
      allow get, list, update, delete: if false;
    }

    /**
     * @description Allows anyone to read ads, but no one to modify them.
     * @path /ads/{adId}
     * @allow (get, list): if true
     * @deny (create, update, delete): if true
     * @principle Allows public reads, but secures writes from all users.
     */
    match /ads/{adId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

   /**
     * @description Allows anyone to read news articles, but no one to modify them.
     * @path /news/{newsId}
     * @allow (get, list): if true
     * @deny (create, update, delete): if true
     * @principle Allows public reads, but secures writes from all users.
     */
    match /news/{newsId} {
      allow get, list: if true;
      allow create, update, delete: if false;

       /**
         * @description Allows anyone to read comments for a specific news article, but only authenticated users to create comments.
         * @path /news/{newsId}/comments/{commentId}
         * @allow (get, list): if true
         * @allow (create): if isSignedIn()
         * @deny (update, delete): if true
         * @principle Allows public reads for comments, but secures writes to authenticated users.
         */
        match /comments/{commentId} {
          allow get, list: if true;
          allow create: if isSignedIn();
          allow update, delete: if false;
        }
    }
     /**
     * @description Restricts read and write access to reported comments.
     * @path /reports/{reportId}
     * @deny (get, list, create, update, delete): if true
     * @principle Secures the single `reports` document from all access.
     */
    match /reports/{reportId} {
      allow get, list, create, update, delete: if false;
    }
  }

  function isSignedIn() {
    return request.auth != null;
  }
}