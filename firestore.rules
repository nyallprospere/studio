/**
 * @fileOverview Firestore Security Rules for the application.
 *
 * Core Philosophy:
 * This ruleset prioritizes a public-read, restricted-write model. Most data is readable by all authenticated users.
 * Write access is generally restricted to prevent unauthorized data modification.
 *
 * Data Structure:
 * The Firestore database consists of several top-level collections. There are no user-specific data trees.
 *
 * Key Security Decisions:
 * - User listing is generally disallowed.
 * - The `news` collection is publicly readable.
 * - Schema validation is relaxed to allow for rapid prototyping, focusing only on authorization-critical fields.
 * - Denormalization is not explicitly used.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows anyone to read news articles, but restricts creation, updates, and deletion.
     * @path /news/{newsId}
     * @allow (get, list) - Any logged-in user can read any news article.
     * @deny (create, update, delete) - No one can create, update or delete news articles.
     * @principle Allows public read access to news articles.
     */
    match /news/{newsId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read comments on news articles, but restricts creation, updates, and deletion.
     * @path /news/{newsId}/comments/{commentId}
     * @allow (get, list) - Any logged-in user can read any comment.
     * @deny (create, update, delete) - No one can create, update or delete comments.
     * @principle Allows public read access to news article comments.
     */
    match /news/{newsId}/comments/{commentId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if false;
    }

    /**
     * @description Restricts access to reports. No one can read, create, update, or delete reports.
     * @path /reports/{reportId}
     * @allow None
     * @deny (get, list, create, update, delete) - All operations are denied on reports.
     * @principle Restricts all access to reports.
     */
    match /reports/{reportId} {
        allow get, list, create, update, delete: if false;
    }

    /**
     * @description Restricts access to mailing list subscribers. No one can read, create, update, or delete subscribers.
     * @path /mailing_list_subscribers/{subscriberId}
     * @allow None
     * @deny (get, list, create, update, delete) - All operations are denied.
     * @principle Restricts all access to mailing list subscribers.
     */
    match /mailing_list_subscribers/{subscriberId} {
      allow get, list, create, update, delete: if false;
    }

    /**
     * @description Restricts access to parties. No one can read, create, update, or delete parties.
     * @path /parties/{partyId}
     * @allow None
     * @deny (get, list, create, update, delete) - All operations are denied.
     * @principle Restricts all access to parties.
     */
    match /parties/{partyId} {
      allow get, list, create, update, delete: if false;
    }

    /**
     * @description Restricts access to party logos. No one can read, create, update, or delete party logos.
     * @path /party_logos/{partyLogoId}
     * @allow None
     * @deny (get, list, create, update, delete) - All operations are denied.
     * @principle Restricts all access to party logos.
     */
    match /party_logos/{partyLogoId} {
      allow get, list, create, update, delete: if false;
    }

    /**
     * @description Restricts access to events. No one can read, create, update, or delete events.
     * @path /events/{eventId}
     * @allow None
     * @deny (get, list, create, update, delete) - All operations are denied.
     * @principle Restricts all access to events.
     */
    match /events/{eventId} {
      allow get, list, create, update, delete: if false;
    }

    /**
     * @description Restricts access to candidates. No one can read, create, update, or delete candidates.
     * @path /candidates/{candidateId}
     * @allow None
     * @deny (get, list, create, update, delete) - All operations are denied.
     * @principle Restricts all access to candidates.
     */
    match /candidates/{candidateId} {
      allow get, list, create, update, delete: if false;
    }

    /**
     * @description Restricts access to archived candidates. No one can read, create, update, or delete archived candidates.
     * @path /archived_candidates/{archivedCandidateId}
     * @allow None
     * @deny (get, list, create, update, delete) - All operations are denied.
     * @principle Restricts all access to archived candidates.
     */
    match /archived_candidates/{archivedCandidateId} {
      allow get, list, create, update, delete: if false;
    }

    /**
     * @description Restricts access to elections. No one can read, create, update, or delete elections.
     * @path /elections/{electionId}
     * @allow None
     * @deny (get, list, create, update, delete) - All operations are denied.
     * @principle Restricts all access to elections.
     */
