/**
 * @file Firestore Security Rules
 * @description This ruleset allows all logged-in users to read and write to all data in the Firestore database.
 *
 * Core Philosophy:
 * The ruleset prioritizes ease of use and rapid prototyping by granting broad access to authenticated users.
 *
 * Data Structure:
 * The Firestore database contains various collections including parties, events, candidates, elections, constituencies, and user activity.
 * Each collection stores documents related to its specific entity.
 *
 * Key Security Decisions:
 * - All logged-in users can read and write any data.
 * - No data validation is performed in this initial prototyping phase.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows all logged-in users to read and write mailing list subscriber data.
     * @path /mailing_list_subscribers/{subscriberId}
     * @allow (read, write) - Any logged-in user can read or write any subscriber data.
     * @deny (none) - No restrictions for logged-in users.
     * @principle Grants full access to authenticated users for rapid prototyping.
     */
    match /mailing_list_subscribers/{subscriberId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows all logged-in users to read and write party data.
     * @path /parties/{partyId}
     * @allow (read, write) - Any logged-in user can read or write any party data.
     * @deny (none) - No restrictions for logged-in users.
     * @principle Grants full access to authenticated users for rapid prototyping.
     */
    match /parties/{partyId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows all logged-in users to read and write party logo data.
     * @path /party_logos/{partyLogoId}
     * @allow (read, write) - Any logged-in user can read or write any party logo data.
     * @deny (none) - No restrictions for logged-in users.
     * @principle Grants full access to authenticated users for rapid prototyping.
     */
    match /party_logos/{partyLogoId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows all logged-in users to read and write event data.
     * @path /events/{eventId}
     * @allow (read, write) - Any logged-in user can read or write any event data.
     * @deny (none) - No restrictions for logged-in users.
     * @principle Grants full access to authenticated users for rapid prototyping.
     */
    match /events/{eventId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows all logged-in users to read and write candidate data.
     * @path /candidates/{candidateId}
     * @allow (read, write) - Any logged-in user can read or write any candidate data.
     * @deny (none) - No restrictions for logged-in users.
     * @principle Grants full access to authenticated users for rapid prototyping.
     */
    match /candidates/{candidateId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows all logged-in users to read and write archived candidate data.
     * @path /archived_candidates/{archivedCandidateId}
     * @allow (read, write) - Any logged-in user can read or write any archived candidate data.
     * @deny (none) - No restrictions for logged-in users.
     * @principle Grants full access to authenticated users for rapid prototyping.
     */
    match /archived_candidates/{archivedCandidateId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows all logged-in users to read and write election data.
     * @path /elections/{electionId}
     * @allow (read, write) - Any logged-in user can read or write any election data.
     * @deny (none) - No restrictions for logged-in users.
     * @principle Grants full access to authenticated users for rapid prototyping.
     */
    match /elections/{electionId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows all logged-in users to read and write polling data.
     * @path /polling_data/{pollingDataId}
     * @allow (read, write) - Any logged-in user can read or write any polling data.
     * @deny (none) - No restrictions for logged-in users.
     * @principle Grants full access to authenticated users for rapid prototyping.
     */
    match /polling_data/{pollingDataId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows all logged-in users to read and write constituency data.
     * @path /constituencies/{constituencyId}
     * @allow (read, write) - Any logged-in user can read or write any constituency data.
     * @deny (none) - No restrictions for logged-in users.
     * @principle Grants full access to authenticated users for rapid prototyping.
     */
    match /constituencies/{constituencyId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows all logged-in users to read and write election result data.
     * @path /election_results/{electionResultId}
     * @allow (read, write) - Any logged-in user can read or write any election result data.
     * @deny (none) - No restrictions for logged-in users.
     * @principle Grants full access to authenticated users for rapid prototyping.
     */
    match /election_results/{electionResultId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows all logged-in users to read and write page layout settings.
     * @path /settings/pageLayouts
     * @allow (read, write) - Any logged-in user can read or write the page layout settings.
     * @deny (none) - No restrictions for logged-in users.
     * @principle Grants full access to authenticated users for rapid prototyping.
     */
    match /settings/pageLayouts {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows all logged-in users to read and write site settings.
     * @path /settings/site
     * @allow (read, write) - Any logged-in user can read or write site settings.
     * @deny (none) - No restrictions for logged-in users.
     * @principle Grants full access to authenticated users for rapid prototyping.
     */
    match /settings/site {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows all logged-in users to read and write user activity data.
     * @path /user_activity/{activityId}
     * @allow (read, write) - Any logged-in user can read or write any user activity data.
     * @deny (none) - No restrictions for logged-in users.
     * @principle Grants full access to authenticated users for rapid prototyping.
     */
    match /user_activity/{activityId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows all logged-in users to read and write region data.
     * @path /regions/{regionId}
     * @allow (read, write) - Any logged-in user can read or write any region data.
     * @deny (none) - No restrictions for logged-in users.
     * @principle Grants full access to authenticated users for rapid prototyping.
     */
    match /regions/{regionId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isSignedIn();
    }

     /**
      * @description Allows all logged-in users to read and write user map data.
      * @path /user_maps/{userMapId}
      * @allow (read, write) - Any logged-in user can read or write any user map data.
      * @deny (none) - No restrictions for logged-in users.
      * @principle Grants full access to authenticated users for rapid prototyping.
      */
    match /user_maps/{userMapId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isSignedIn();
    }

   /**
    * @description Allows all logged-in users to read and write ad data.
    * @path /ads/{adId}
    * @allow (read, write) - Any logged-in user can read or write any ad data.
    * @deny (none) - No restrictions for logged-in users.
    * @principle Grants full access to authenticated users for rapid prototyping.
    */
    match /ads/{adId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows all logged-in users to read and write news article data.
     * @path /news/{newsId}
     * @allow (read, write) - Any logged-in user can read or write any news article data.
     * @deny (none) - No restrictions for logged-in users.
     * @principle Grants full access to authenticated users for rapid prototyping.
     */
    match /news/{newsId} {
        allow get, list: if isSignedIn();
        allow create, update, delete: if isSignedIn();

        /**
         * @description Allows all logged-in users to read and write comments for a specific news article.
         * @path /news/{newsId}/comments/{commentId}
         * @allow (read, write) - Any logged-in user can read or write comments.
         * @deny (none) - No restrictions for logged-in users.
         * @principle Grants full access to authenticated users for rapid prototyping.
         */
        match /comments/{commentId} {
            allow get, list: if isSignedIn();
            allow create, update, delete: if isSignedIn();
        }
    }

    /**
     * @description Allows all logged-in users to read and write report data.
     * @path /reports/{reportId}
     * @allow (read, write) - Any logged-in user can read or write any report data.
     * @deny (none) - No restrictions for logged-in users.
     * @principle Grants full access to authenticated users for rapid prototyping.
     */
    match /reports/{reportId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isSignedIn();
    }

  }

  function isSignedIn() {
    return request.auth != null;
  }
}