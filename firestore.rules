     * @principle Public read, auth required write.
     */
    match /user_maps/{userMapId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows anyone to read ads, but requires authentication to write.
     * @path /ads/{adId}
     * @allow (get, list): if true
     * @allow (create, update, delete): if isSignedIn()
     * @deny (create): if false
     * @deny (update): if false
     * @deny (delete): if false
     * @principle Public read, auth required write.
     */
    match /ads/{adId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows anyone to read news articles, but requires authentication to write.
     * @path /news/{newsId}
     * @allow (get, list): if true
     * @allow (create, update, delete): if isSignedIn()
     * @deny (create): if false
     * @deny (update): if false
     * @deny (delete): if false
     * @principle Public read, auth required write.
     */
    match /news/{newsId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();

       /**
        * @description Allows anyone to read comments on news articles, but requires authentication to write.
        * @path /news/{newsId}/comments/{commentId}
        * @allow (get, list): if true
        * @allow (create, update, delete): if isSignedIn()
        * @deny (create): if false
        * @deny (update): if false
        * @deny (delete): if false
        * @principle Public read, auth required write.
        */
      match /comments/{commentId} {
        allow get, list: if true;
        allow create, update, delete: if isSignedIn();
      }
    }

     /**
      * @description Allows anyone to read reports, but requires authentication to write.
      * @path /reports/{reportId}
      * @allow (get, list): if true
      * @allow (create, update, delete): if isSignedIn()
      * @deny (create): if false
      * @deny (update): if false
      * @deny (delete): if false
      * @principle Public read, auth required write.
      */
    match /reports/{reportId} {
        allow get, list: if true;
        allow create, update, delete: if isSignedIn();
    }


    // Helper function to determine if a user is signed in.
    function isSignedIn() {
      return request.auth != null;
    }
  }
}