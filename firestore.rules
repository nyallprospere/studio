/**
 * @file Firebase Security Rules
 * @description This ruleset is designed for the 'Saint Lucia Elects' application, focusing on securing access to various data collections related to elections, candidates, parties, and user activity.
 *
 * Core Philosophy:
 *  - The ruleset prioritizes secure data access based on the principle of least privilege.
 *  - All read operations are generally public unless they involve user-specific data.
 *  - All write operations require authentication and, where applicable, ownership validation.
 *
 * Data Structure:
 *  - Top-level collections store core application data: 'parties', 'candidates', 'elections', etc.
 *  - Nested collections, such as 'news/{newsId}/comments/{commentId}', establish clear data relationships and ownership.
 *  - The 'settings' collection contains singleton documents for global configurations.
 *
 * Key Security Decisions:
 *  - Listing of user activity is restricted.
 *  - Data validation is minimized to focus on authorization and relational integrity.
 *  - All write operations are explicitly protected with authentication checks to prevent unauthorized data modification.
 *
 * Access Control Patterns:
 *  - Public Read with Restricted Write: Used for collections like 'parties', 'candidates', 'elections', 'news', etc. where data is publicly accessible but write access is restricted.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows anyone to read mailing list subscribers, but restricts write access.
     * @path /mailing_list_subscribers/{subscriberId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Public read, restricted write.
     */
    match /mailing_list_subscribers/{subscriberId} {
      allow get, list: if true;
      allow create, update, delete: if false;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows anyone to read party information, but restricts write access.
     * @path /parties/{partyId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Public read, restricted write.
     */
    match /parties/{partyId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows anyone to read party logos, but restricts write access.
     * @path /party_logos/{partyLogoId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Public read, restricted write.
     */
    match /party_logos/{partyLogoId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows anyone to read event information, but restricts write access.
     * @path /events/{eventId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Public read, restricted write.
     */
    match /events/{eventId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows anyone to read candidate information, but restricts write access.
     * @path /candidates/{candidateId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Public read, restricted write.
     */
    match /candidates/{candidateId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows anyone to read archived candidate information, but restricts write access.
     * @path /archived_candidates/{archivedCandidateId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Public read, restricted write.
     */
    match /archived_candidates/{archivedCandidateId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows anyone to read election information, but restricts write access.
     * @path /elections/{electionId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Public read, restricted write.
     */
    match /elections/{electionId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows anyone to read polling data, but restricts write access.
     * @path /polling_data/{pollingDataId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Public read, restricted write.
     */
    match /polling_data/{pollingDataId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows anyone to read constituency information, but restricts write access.
     * @path /constituencies/{constituencyId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Public read, restricted write.
     */
    match /constituencies/{constituencyId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows anyone to read election results, but restricts write access.
     * @path /election_results/{electionResultId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Public read, restricted write.
     */
    match /election_results/{electionResultId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows anyone to read page layouts, but restricts write access.
     * @path /settings/pageLayouts
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Public read, restricted write.
     */
    match /settings/pageLayouts {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows anyone to read site settings, but restricts write access.
     * @path /settings/site
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Public read, restricted write.
     */
    match /settings/site {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Restricts access to user activity.
     * @path /user_activity/{activityId}
     * @allow get, list: if false;
     * @deny create, update, delete: if false;
     * @principle Restricted access.
     */
    match /user_activity/{activityId} {
      allow get, list: if false;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read region information, but restricts write access.
     * @path /regions/{regionId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Public read, restricted write.
     */
    match /regions/{regionId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows anyone to read user maps, but restricts write access.
     * @path /user_maps/{userMapId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Public read, restricted write.
     */
    match /user_maps/{userMapId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows anyone to read ads, but restricts write access.
     * @path /ads/{adId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Public read, restricted write.
     */
    match /ads/{adId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows anyone to read news articles, but restricts write access.
     * @path /news/{newsId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Public read, restricted write.
     */
    match /news/{newsId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
        
        /**
         * @description Allows anyone to read a comment on a news article, but restricts write access.
         * @path /news/{newsId}/comments/{commentId}
         * @allow get, list: if true;
         * @deny create, update, delete: if false;
         * @principle Public read, restricted write.
         */
        match /comments/{commentId} {
            allow get, list: if true;
            allow create, update, delete: if isSignedIn();
        }
    }

    /**
     * @description Restricts access to reported comments.
     * @path /reports/{reportId}
     * @allow get, list: if false;
     * @deny create, update, delete: if false;
     * @principle Restricted access.
     */
    match /reports/{reportId} {
      allow get, list: if false;
      allow create, update, delete: if false;
    }

    /**
     * @description Enforces that all users must be authenticated to write.
     */
    function isSignedIn() {
        return request.auth != null;
    }
  }
}