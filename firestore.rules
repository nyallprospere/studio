/**
 * @fileoverview Firestore Security Rules for the St. Lucia Elections Hub application.
 *
 * Core Philosophy:
 * This ruleset provides a baseline security configuration focused on allowing all logged-in users to add election years and enforces authorization primarily through verified identity.
 *
 * Data Structure:
 * The database consists of several top-level collections: `parties`, `candidates`, `elections`, `polling_data`, `constituencies`, and `election_results`.
 * Additionally, there's a `settings` document with subdocuments `pageLayouts` and `site` for global configurations.
 *
 * Key Security Decisions:
 * - All documents are accessible for reading to all users.
 * - Only authenticated users can create election documents.
 * - Data validation is minimized in this prototyping phase.
 *
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Grants read access to all parties and restricts write access.
     * @path /parties/{partyId}
     * @allow get, list: if true;
     * @allow create: if false;
     * @allow update: if false;
     * @allow delete: if false;
     * @principle Grants public read access but denies all write operations.
     */
    match /parties/{partyId} {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Grants read access to all candidates and restricts write access.
     * @path /candidates/{candidateId}
     * @allow get, list: if true;
     * @allow create: if false;
     * @allow update: if false;
     * @allow delete: if false;
     * @principle Grants public read access but denies all write operations.
     */
    match /candidates/{candidateId} {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows all logged-in users to create elections, but restricts updates and deletes.
     * @path /elections/{electionId}
     * @allow get, list: if true;
     * @allow create: if isSignedIn();
     * @allow update: if false;
     * @allow delete: if false;
     * @principle Allows creation only for authenticated users.
     */
    match /elections/{electionId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Grants read access to all polling data and restricts write access.
     * @path /polling_data/{pollingDataId}
     * @allow get, list: if true;
     * @allow create: if false;
     * @allow update: if false;
     * @allow delete: if false;
     * @principle Grants public read access but denies all write operations.
     */
    match /polling_data/{pollingDataId} {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Grants read access to all constituencies and restricts write access.
     * @path /constituencies/{constituencyId}
     * @allow get, list: if true;
     * @allow create: if false;
     * @allow update: if false;
     * @allow delete: if false;
     * @principle Grants public read access but denies all write operations.
     */
    match /constituencies/{constituencyId} {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Grants read access to all election results and restricts write access.
     * @path /election_results/{electionResultId}
     * @allow get, list: if true;
     * @allow create: if false;
     * @allow update: if false;
     * @allow delete: if false;
     * @principle Grants public read access but denies all write operations.
     */
    match /election_results/{electionResultId} {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Grants read access to page layouts settings and restricts write access.
     * @path /settings/pageLayouts
     * @allow get: if true;
     * @allow list: if false;
     * @allow create: if false;
     * @allow update: if false;
     * @allow delete: if false;
     * @principle Grants public read access but denies all write operations.
     */
    match /settings/pageLayouts {
      allow get: if true;
      allow list: if false;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Grants read access to site settings and restricts write access.
     * @path /settings/site
     * @allow get: if true;
     * @allow list: if false;
     * @allow create: if false;
     * @allow update: if false;
     * @allow delete: if false;
     * @principle Grants public read access but denies all write operations.
     */
    match /settings/site {
      allow get: if true;
      allow list: if false;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    // ---- Helper functions ----
    function isSignedIn() {
      return request.auth != null;
    }
  }
}