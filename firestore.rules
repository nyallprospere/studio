
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Default deny all access
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow public read on parties, but only authenticated users can write.
    match /parties/{partyId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow public read on candidates, but only authenticated users can write.
    match /candidates/{candidateId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow public read on constituencies, but only authenticated users can write.
    match /constituencies/{constituencyId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow public read on polls, but only authenticated users can write.
    match /polls/{pollId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow public read on historical results, but only authenticated users can write.
    match /historicalResults/{resultId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
