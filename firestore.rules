/**
 * @fileoverview Firestore Security Rules for the Election Information App.
 *
 * Core Philosophy:
 * This ruleset prioritizes open access for read operations while strictly controlling write operations.
 * Data modification (create, update, delete) is generally restricted to authorized users.
 *
 * Data Structure:
 * The Firestore database is organized into top-level collections such as 'parties', 'candidates',
 * 'elections', and 'constituencies'.  Each document within these collections represents a distinct
 * entity (e.g., a political party, a candidate, an election event).
 *
 * Key Security Decisions:
 * - Read access is generally open for most collections to allow public consumption of information.
 * - Write access is restricted to prevent unauthorized data modification.
 * - The 'settings' documents (pageLayouts, site) are treated as publicly readable but not writable
 *   through the client-side rules.
 * - The 'user_activity' collection allows anyone to create activity logs.
 * - Recaptcha should be implemented in code.
 *
 * Denormalization for Authorization:
 *  N/A - there are no specific user roles.
 *  For writes, we are assuming trusted clients and are not performing extra authorization checks.
 *  This assumes backend Recaptcha implementation.
 *
 * Structural Segregation:
 * N/A - all collections are top-level.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows anyone to read mailing list subscribers, but restricts writes.
     * @path /mailing_list_subscribers/{subscriberId}
     * @allow (get, list): if true
     * @deny (create, update, delete): if false
     * @principle Open reads, restricted writes.
     */
    match /mailing_list_subscribers/{subscriberId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read parties, but restricts writes.
     * @path /parties/{partyId}
     * @allow (get, list): if true
     * @deny (create, update, delete): if false
     * @principle Open reads, restricted writes.
     */
    match /parties/{partyId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

        /**
     * @description Allows anyone to read party logos, but restricts writes.
     * @path /party_logos/{partyLogoId}
     * @allow (get, list): if true
     * @deny (create, update, delete): if false
     * @principle Open reads, restricted writes.
     */
    match /party_logos/{partyLogoId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read events, but restricts writes.
     * @path /events/{eventId}
     * @allow (get, list): if true
     * @deny (create, update, delete): if false
     * @principle Open reads, restricted writes.
     */
    match /events/{eventId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read candidates, but restricts writes.
     * @path /candidates/{candidateId}
     * @allow (get, list): if true
     * @deny (create, update, delete): if false
     * @principle Open reads, restricted writes.
     */
    match /candidates/{candidateId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read archived candidates, but restricts writes.
     * @path /archived_candidates/{archivedCandidateId}
     * @allow (get, list): if true
     * @deny (create, update, delete): if false
     * @principle Open reads, restricted writes.
     */
    match /archived_candidates/{archivedCandidateId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read elections, but restricts writes.
     * @path /elections/{electionId}
     * @allow (get, list): if true
     * @deny (create, update, delete): if false
     * @principle Open reads, restricted writes.
     */
    match /elections/{electionId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read polling data, but restricts writes.
     * @path /polling_data/{pollingDataId}
     * @allow (get, list): if true
     * @deny (create, update, delete): if false
     * @principle Open reads, restricted writes.
     */
    match /polling_data/{pollingDataId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read constituencies, but restricts writes.
     * @path /constituencies/{constituencyId}
     * @allow (get, list): if true
     * @deny (create, update, delete): if false
     * @principle Open reads, restricted writes.
     */
    match /constituencies/{constituencyId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read election results, but restricts writes.
     * @path /election_results/{electionResultId}
     * @allow (get, list): if true
     * @deny (create, update, delete): if false
     * @principle Open reads, restricted writes.
     */
    match /election_results/{electionResultId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read page layouts, but restricts writes.
     * @path /settings/pageLayouts
     * @allow (get, list): if true
     * @deny (create, update, delete): if false
     * @principle Open reads, restricted writes.
     */
    match /settings/pageLayouts {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read site settings, but restricts writes.
     * @path /settings/site
     * @allow (get, list): if true
     * @deny (create, update, delete): if false
     * @principle Open reads, restricted writes.
     */
    match /settings/site {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to create user activity logs, but restricts reads.
     * @path /user_activity/{activityId}
     * @allow create: if true
     * @deny get, list, update, delete: if false
     * @principle Open writes, restricted reads.
     */
    match /user_activity/{activityId} {
      allow create: if true;
      allow get, list, update, delete: if false;
    }

    /**
     * @description Allows anyone to read regions, but restricts writes.
     * @path /regions/{regionId}
     * @allow (get, list): if true
     * @deny (create, update, delete): if false
     * @principle Open reads, restricted writes.
     */
    match /regions/{regionId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

        /**
     * @description Allows anyone to read user maps, but restricts writes.
     * @path /user_maps/{userMapId}
     * @allow (get, list): if true
     * @deny (create, update, delete): if false
     * @principle Open reads, restricted writes.
     */
    match /user_maps/{userMapId} {
      allow get, list: if true;
      allow create: if true;
      allow update, delete: if false;
    }

        /**
     * @description Allows anyone to read ads, but restricts writes.
     * @path /ads/{adId}
     * @allow (get, list): if true
     * @deny (create, update, delete): if false
     * @principle Open reads, restricted writes.
     */
    match /ads/{adId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

        /**
     * @description Allows anyone to read news articles, but restricts writes.
     * @path /news/{newsId}
     * @allow (get, list): if true
     * @deny (create, update, delete): if false
     * @principle Open reads, restricted writes.
     */
    match /news/{newsId} {
      allow get, list: if true;
      allow create, update, delete: if false;

            /**
             * @description Allows anyone to read comments under a news article, and signed in user to create, but restricts writes.
             * @path /news/{newsId}/comments/{commentId}
             * @allow (get, list): if true
             * @allow (create): if isSignedIn()
             * @deny (update, delete): if false
             * @principle Open reads, authenticated writes.
             */
            match /comments/{commentId} {
                allow get, list: if true;
                allow create: if isSignedIn();
                allow update, delete: if false;
            }
        }

        /**
        * @description Allows anyone to read reports, but restricts writes.
        * @path /reports/{reportId}
        * @allow (get, list): if true
        * @deny (create, update, delete): if false
        * @principle Open reads, restricted writes.
        */
       match /reports/{reportId} {
           allow get, list: if true;
           allow create, update, delete: if false;
       }
  }

  /**
   * @description Checks if the user is signed in.
   * @return {bool} True if the user is signed in, false otherwise.
   */
  function isSignedIn() {
    return request.auth != null;
  }
}