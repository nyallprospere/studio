/**
 * @fileoverview Firestore Security Rules for the St. Lucia Elections Hub application.
 *
 * Core Philosophy:
 * This ruleset prioritizes public read access for most data while restricting write access to authorized users.
 * It emphasizes simplicity and avoids complex data validation in favor of rapid prototyping.
 *
 * Data Structure:
 * The Firestore database consists of several top-level collections:
 * - /parties/{partyId}: Stores information about political parties.
 * - /events/{eventId}: Stores information about political events.
 * - /candidates/{candidateId}: Stores information about candidates.
 * - /elections/{electionId}: Stores information about elections.
 * - /polling_data/{pollingDataId}: Stores polling data for elections.
 * - /constituencies/{constituencyId}: Stores information about constituencies.
 * - /election_results/{electionResultId}: Stores election results.
 * - /settings/pageLayouts: Stores user-defined layouts for various pages.
 * - /settings/site: Stores global site settings.
 *
 * Key Security Decisions:
 * - Public read access is granted to all collections to facilitate open data access.
 * - Write access is denied to all users unless specific authorization logic is added later.
 * - Data validation is minimal to allow for flexible data shapes during prototyping.
 * - Listing of collections is generally allowed for all users.
 *
 * Denormalization for Authorization:
 * This ruleset avoids `get()` calls by assuming that any necessary authorization data (e.g., ownership, roles)
 * will be denormalized directly onto the documents being secured.
 *
 * Structural Segregation:
 * Publicly readable data (e.g., candidate profiles, election results) is stored in top-level collections
 * to avoid the need for complex filtering based on public/private flags.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Grants public read access to party data and restricts write access.
     * @path /parties/{partyId}
     * @allow get, list: if true;
     * @allow create: if false;
     * @allow update: if false;
     * @allow delete: if false;
     * @principle Allows public read access while restricting all write access to parties.
     */
    match /parties/{partyId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Grants public read access to event data and restricts write access.
     * @path /events/{eventId}
     * @allow get, list: if true;
     * @allow create: if false;
     * @allow update: if false;
     * @allow delete: if false;
     * @principle Allows public read access while restricting all write access to events.
     */
    match /events/{eventId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Grants public read access to candidate data and restricts write access.
     * @path /candidates/{candidateId}
     * @allow get, list: if true;
     * @allow create: if false;
     * @allow update: if false;
     * @allow delete: if false;
     * @principle Allows public read access while restricting all write access to candidates.
     */
    match /candidates/{candidateId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Grants public read access to election data and restricts write access.
     * @path /elections/{electionId}
     * @allow get, list: if true;
     * @allow create: if false;
     * @allow update: if false;
     * @allow delete: if false;
     * @principle Allows public read access while restricting all write access to elections.
     */
    match /elections/{electionId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Grants public read access to polling data and restricts write access.
     * @path /polling_data/{pollingDataId}
     * @allow get, list: if true;
     * @allow create: if false;
     * @allow update: if false;
     * @allow delete: if false;
     * @principle Allows public read access while restricting all write access to polling data.
     */
    match /polling_data/{pollingDataId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Grants public read access to constituency data and restricts write access.
     * @path /constituencies/{constituencyId}
     * @allow get, list: if true;
     * @allow create: if false;
     * @allow update: if false;
     * @allow delete: if false;
     * @principle Allows public read access while restricting all write access to constituencies.
     */
    match /constituencies/{constituencyId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Grants public read access to election result data and restricts write access.
     * @path /election_results/{electionResultId}
     * @allow get, list: if true;
     * @allow create: if false;
     * @allow update: if false;
     * @allow delete: if false;
     * @principle Allows public read access while restricting all write access to election results.
     */
    match /election_results/{electionResultId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Grants public read access to page layouts data and restricts write access.
     * @path /settings/pageLayouts
     * @allow get, list: if true;
     * @allow create: if false;
     * @allow update: if false;
     * @allow delete: if false;
     * @principle Allows public read access while restricting all write access to page layouts.
     */
    match /settings/pageLayouts {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Grants public read access to site settings data and restricts write access.
     * @path /settings/site
     * @allow get, list: if true;
     * @allow create: if false;
     * @allow update: if false;
     * @allow delete: if false;
     * @principle Allows public read access while restricting all write access to site settings.
     */
    match /settings/site {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }
  }
}