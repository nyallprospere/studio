/**
 * @fileoverview Firestore Security Rules for the St. Lucia Elections Hub application.
 *
 * Core Philosophy:
 * This ruleset provides public read access to most data collections, while restricting write access to prevent unauthorized modifications.
 *
 * Data Structure:
 * The database consists of several top-level collections, including `parties`, `events`, `candidates`, `elections`, `polling_data`, `constituencies`, and `election_results`.
 * There are also singleton documents at `/settings/pageLayouts` and `/settings/site` for global configuration.
 *
 * Key Security Decisions:
 * - Public read access is granted for most collections to allow open data consumption.
 * - Write access is generally denied to prevent unauthorized data modification.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows public read access to party data and restricts write access.
     * @path /parties/{partyId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Allows public reads, restricts all writes.
     */
    match /parties/{partyId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows public read access to event data and restricts write access.
     * @path /events/{eventId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Allows public reads, restricts all writes.
     */
    match /events/{eventId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows public read access to candidate data and restricts write access.
     * @path /candidates/{candidateId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Allows public reads, restricts all writes.
     */
    match /candidates/{candidateId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows public read access to election data and restricts write access.
     * @path /elections/{electionId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Allows public reads, restricts all writes.
     */
    match /elections/{electionId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows public read access to polling data and restricts write access.
     * @path /polling_data/{pollingDataId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Allows public reads, restricts all writes.
     */
    match /polling_data/{pollingDataId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows public read access to constituency data and restricts write access.
     * @path /constituencies/{constituencyId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Allows public reads, restricts all writes.
     */
    match /constituencies/{constituencyId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows public read access to election result data and restricts write access.
     * @path /election_results/{electionResultId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Allows public reads, restricts all writes.
     */
    match /election_results/{electionResultId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

     /**
     * @description Allows public read access to page layouts data and restricts write access.
     * @path /settings/pageLayouts
     * @allow get: if true;
     * @deny list, create, update, delete: if false;
     * @principle Allows public reads, restricts all writes.
     */
    match /settings/pageLayouts {
      allow get: if true;
      allow list, create, update, delete: if false;
    }

    /**
     * @description Allows public read access to site settings data and restricts write access.
     * @path /settings/site
     * @allow get: if true;
     * @deny list, create, update, delete: if false;
     * @principle Allows public reads, restricts all writes.
     */
    match /settings/site {
      allow get: if true;
      allow list, create, update, delete: if false;
    }
  }
}