/**
 * @file Overview
 * This ruleset enforces a public-read, owner-write model for most top-level collections,
 * and restricts user-specific data to the authenticated owner. It prioritizes
 * security by default, explicitly denying access where the data model is ambiguous.
 *
 * Data Structure:
 * - Top-level collections like `/parties`, `/candidates`, and `/news` are generally
 *   publicly readable.
 * - Subcollections under `/news/{newsId}` (e.g., `/comments`) follow the parent's
 *   access control.
 * - The `/users/{userId}` collection is intended for strictly private user data.
 * - The `/settings` collection contains singleton documents for global settings.
 *
 * Key Security Decisions:
 * - User listing is generally disallowed to protect user privacy.
 * - Write operations are strictly controlled using the `request.auth.uid` to ensure
 *   that only authenticated users can create, update, or delete data.
 * - Schema validation is relaxed during this prototyping phase to enable rapid iteration.
 *
 * Denormalization for Authorization:
 *  - While the current data model doesn't explicitly require denormalization,
 *    consider adding `ownerId` or `authorId` fields to documents where owner-only
 *    write access is required but not implicitly enforced by the path. This avoids
 *    costly `get()` calls in the Security Rules.
 *
 * Structural Segregation:
 *  - The data model uses separate collections for different types of data,
 *    which simplifies access control rules. For example, public news articles
 *    are stored in `/news`, while user-specific data is stored in `/users/{userId}`.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows anyone to read mailing list subscribers, but nobody to modify it.
     * @path /mailing_list_subscribers/{subscriberId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Public read-only access for now.
     */
    match /mailing_list_subscribers/{subscriberId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read parties, but nobody to modify it.
     * @path /parties/{partyId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Public read-only access for now.
     */
    match /parties/{partyId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read party logos, but nobody to modify it.
     * @path /party_logos/{partyLogoId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Public read-only access for now.
     */
    match /party_logos/{partyLogoId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read events, but nobody to modify it.
     * @path /events/{eventId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Public read-only access for now.
     */
    match /events/{eventId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read candidates, but nobody to modify it.
     * @path /candidates/{candidateId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Public read-only access for now.
     */
    match /candidates/{candidateId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read archived candidates, but nobody to modify it.
     * @path /archived_candidates/{archivedCandidateId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Public read-only access for now.
     */
    match /archived_candidates/{archivedCandidateId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read elections, but nobody to modify it.
     * @path /elections/{electionId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Public read-only access for now.
     */
    match /elections/{electionId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read polling data, but nobody to modify it.
     * @path /polling_data/{pollingDataId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Public read-only access for now.
     */
    match /polling_data/{pollingDataId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read constituencies, but nobody to modify it.
     * @path /constituencies/{constituencyId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Public read-only access for now.
     */
    match /constituencies/{constituencyId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read election results, but nobody to modify it.
     * @path /election_results/{electionResultId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Public read-only access for now.
     */
    match /election_results/{electionResultId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read page layouts, but nobody to modify it.
     * @path /settings/pageLayouts
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Public read-only access for now.
     */
    match /settings/pageLayouts {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read site settings, but nobody to modify it.
     * @path /settings/site
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Public read-only access for now.
     */
    match /settings/site {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read user activity, but nobody to modify it.
     * @path /user_activity/{activityId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Public read-only access for now.
     */
    match /user_activity/{activityId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read regions, but nobody to modify it.
     * @path /regions/{regionId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Public read-only access for now.
     */
    match /regions/{regionId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

   /**
     * @description Allows anyone to read user maps, but nobody to modify it.
     * @path /user_maps/{userMapId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Public read-only access for now.
     */
    match /user_maps/{userMapId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read ads, but nobody to modify it.
     * @path /ads/{adId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Public read-only access for now.
     */
    match /ads/{adId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read news articles, but nobody to modify it.
     * @path /news/{newsId}
     * @allow get, list: if true;
     * @deny create, update, delete: if false;
     * @principle Public read-only access for now.
     */
    match /news/{newsId} {
      allow get, list: if true;
      allow create, update, delete: if false;

      /**
       * @description Allows anyone to read news article comments, but nobody to modify it.
       * @path /news/{newsId}/comments/{commentId}
       * @allow get, list: if true;
       * @deny create, update, delete: if false;
       * @principle Public read-only access for now.
       */
      match /comments/{commentId} {
        allow get, list: if true;
        allow create, update, delete: if false;
      }
    }

     /**
      * @description Allows anyone to read reports, but nobody to modify it.
      * @path /reports/{reportId}
      * @allow get, list: if true;
      * @deny create, update, delete: if false;
      * @principle Public read-only access for now.
      */
    match /reports/{reportId} {
        allow get, list: if true;
        allow create, update, delete: if false;
    }

  }
}