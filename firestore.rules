
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    // Public read access, temporarily public write access for debugging
    match /parties/{partyId} {
      allow read: if true;
      allow write: if true; // Temporarily changed from isSignedIn()
    }

    // Public read access, restricted write access
    match /candidates/{candidateId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // Public read access, restricted write access
    match /constituencies/{constituencyId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // Public read access, restricted write access
    match /polls/{pollId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // Public read access, restricted write access
    match /historicalResults/{resultId} {
      allow read: if true;
      allow write: if isSignedIn();
    }
  }
}
