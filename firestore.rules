/**
 * @fileoverview Firestore Security Rules for the St. Lucia Elections Hub application.
 *
 * Core Philosophy:
 * This ruleset prioritizes security by enforcing strict ownership and access controls on all data.
 * It defaults to a deny-all policy and explicitly grants access based on user authentication and authorization.
 * The rules are designed to prevent unauthorized data access and modification.
 *
 * Data Structure:
 * - /parties/{partyId}: Stores political party information.
 * - /candidates/{candidateId}: Stores candidate information.
 * - /elections/{electionId}: Stores election event information.
 * - /polling_data/{pollingDataId}: Stores polling data for elections.
 * - /constituencies/{constituencyId}: Stores constituency information.
 * - /election_results/{electionResultId}: Stores election result information.
 * - /settings/site: Stores global site settings.
 *
 * Key Security Decisions:
 * - All write operations require user authentication.
 * - There is no implicit public access to any data.
 *
 * Denormalization for Authorization:
 *  - There is no need to denormalize any extra data as the current data structure does not have any hierarchical data that requires complex authorization.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the user is signed in.
     * @return {boolean} True if the user is signed in, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Allows only authenticated users.
     * @return {boolean} True if the user is authenticated, false otherwise.
     */
    function isAuthenticated() {
        return isSignedIn();
    }

    /**
     * @description Enforces that only the authenticated user can update the site settings.
     * @path /settings/site
     * @allow (update) - Authenticated user can update settings.
     * @deny (update) - Unauthenticated user cannot update settings.
     * @principle Requires authentication for updates.
     */
    match /settings/site {
      allow get: if true;
      allow list: if false;
      allow create: if false;
      allow update: if isAuthenticated();
      allow delete: if false;
    }
    
    /**
     * @description Manages access to political party information.
     * @path /parties/{partyId}
     * @allow (get, list) - Any user can read party information.
     * @allow (create, update, delete) - Only authenticated users can modify party information.
     * @deny (create, update, delete) - Unauthenticated users cannot modify party information.
     * @principle Requires authentication for writes.
     */
    match /parties/{partyId} {
      allow get, list: if true;
      allow create, update, delete: if isAuthenticated();
    }

    /**
     * @description Manages access to candidate information.
     * @path /candidates/{candidateId}
     * @allow (get, list) - Any user can read candidate information.
     * @allow (create, update, delete) - Only authenticated users can modify candidate information.
     * @deny (create, update, delete) - Unauthenticated users cannot modify candidate information.
     * @principle Requires authentication for writes.
     */
    match /candidates/{candidateId} {
      allow get, list: if true;
      allow create, update, delete: if isAuthenticated();
    }

    /**
     * @description Manages access to election information.
     * @path /elections/{electionId}
     * @allow (get, list) - Any user can read election information.
     * @allow (create, update, delete) - Only authenticated users can modify election information.
     * @deny (create, update, delete) - Unauthenticated users cannot modify election information.
     * @principle Requires authentication for writes.
     */
    match /elections/{electionId} {
      allow get, list: if true;
      allow create, update, delete: if isAuthenticated();
    }

    /**
     * @description Manages access to polling data.
     * @path /polling_data/{pollingDataId}
     * @allow (get, list) - Any user can read polling data.
     * @allow (create, update, delete) - Only authenticated users can modify polling data.
     * @deny (create, update, delete) - Unauthenticated users cannot modify polling data.
     * @principle Requires authentication for writes.
     */
    match /polling_data/{pollingDataId} {
      allow get, list: if true;
      allow create, update, delete: if isAuthenticated();
    }

    /**
     * @description Manages access to constituency information.
     * @path /constituencies/{constituencyId}
     * @allow (get, list) - Any user can read constituency information.
     * @allow (create, update, delete) - Only authenticated users can modify constituency information.
     * @deny (create, update, delete) - Unauthenticated users cannot modify constituency information.
     * @principle Requires authentication for writes.
     */
    match /constituencies/{constituencyId} {
      allow get, list: if true;
      allow create, update, delete: if isAuthenticated();
    }

    /**
     * @description Manages access to election result information.
     * @path /election_results/{electionResultId}
     * @allow (get, list) - Any user can read election result information.
     * @allow (create, update, delete) - Only authenticated users can modify election result information.
     * @deny (create, update, delete) - Unauthenticated users cannot modify election result information.
     * @principle Requires authentication for writes.
     */
    match /election_results/{electionResultId} {
      allow get, list: if true;
      allow create, update, delete: if isAuthenticated();
    }
  }
}