/**
 * @fileoverview Firestore Security Rules for the Election App.
 *
 * Core Philosophy:
 * This ruleset allows access to all documents for authenticated users.
 *
 * Data Structure:
 * - Top-level collections for core entities like parties, candidates, elections, etc.
 * - Subcollections under /news/{newsId} for comments
 * - Single documents under /settings for global configurations.
 *
 * Key Security Decisions:
 * - Authenticated users can read and write any data.
 *
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Grants access to all mailing list subscriber data for signed in users.
     * @path /mailing_list_subscribers/{subscriberId}
     * @allow (get, list, create, update, delete) - Any authenticated user.
     * @deny (get, list, create, update, delete) - Never
     * @principle Allows access to all documents to signed in users
     */
    match /mailing_list_subscribers/{subscriberId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Grants access to all party data for signed in users.
     * @path /parties/{partyId}
