     * @deny (update): if false
     * @deny (delete): if false
     * @principle Public read, auth required write.
     */
    match /election_results/{electionResultId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows anyone to read page layouts, but requires authentication to write.
     * @path /settings/pageLayouts
     * @allow (get, list): if true
     * @allow (create, update, delete): if isSignedIn()
     * @deny (create): if false
     * @deny (update): if false
     * @deny (delete): if false
     * @principle Public read, auth required write.
     */
    match /settings/pageLayouts {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows anyone to read site settings, but requires authentication to write.
     * @path /settings/site
     * @allow (get, list): if true
     * @allow (create, update, delete): if isSignedIn()
     * @deny (create): if false
     * @deny (update): if false
     * @deny (delete): if false
     * @principle Public read, auth required write.
     */
    match /settings/site {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows anyone to read user activity, but requires authentication to write.
     * @path /user_activity/{activityId}
     * @allow (get, list): if true
     * @allow (create, update, delete): if isSignedIn()
     * @deny (create): if false
     * @deny (update): if false
     * @deny (delete): if false
     * @principle Public read, auth required write.
     */
    match /user_activity/{activityId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows anyone to read regions, but requires authentication to write.
     * @path /regions/{regionId}
     * @allow (get, list): if true
     * @allow (create, update, delete): if isSignedIn()
     * @deny (create): if false
     * @deny (update): if false
