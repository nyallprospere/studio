
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null && (request.auth.token.email == 'admin@revolucianize.com' || request.auth.token.email == 'nyall2006@gmail.com');
    }

    match /mailing_list_subscribers/{subscriberId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    match /parties/{partyId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    match /party_logos/{partyLogoId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    match /events/{eventId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    match /candidates/{candidateId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    match /archived_candidates/{archivedCandidateId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    match /elections/{electionId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    match /polling_data/{pollingDataId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    match /constituencies/{constituencyId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    match /election_results/{electionResultId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    match /settings/{document=**} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    match /user_activity/{activityId} {
        allow create: if true;
        allow read, update, delete: if false;
    }

    match /regions/{regionId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    match /user_maps/{userMapId} {
      allow create: if true;
      allow get, list: if true;
      allow update: if true;
      allow delete: if false;
    }

    match /ads/{adId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }
    
    match /ad_clicks/{adClickId} {
      allow list, get: if isAdmin();
      allow create: if true;
      allow update, delete: if false;
    }

    match /news/{newsId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();

      match /comments/{commentId} {
          allow create: if true;
          allow get, list: if true;
          allow update: if request.auth != null && request.resource.data.author == request.auth.token.name;
          allow delete: if request.auth != null && resource.data.author == request.auth.token.name;
      }
    }

    match /reports/{reportId} {
        allow get, list, update, delete: if isAdmin();
        allow create: if true;
    }

    match /constituency_projections/{projectionId} {
        allow get, list: if true;
        allow create, update, delete: if isAdmin();
    }

    match /voter_information/{infoId} {
        allow get, list: if true;
        allow create, update, delete: if isAdmin();
    }
  }
}
