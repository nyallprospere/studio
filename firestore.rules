/**
 * @fileoverview Firestore Security Rules for the St. Lucia Elections Hub application.
 *
 * Core Philosophy:
 * This ruleset prioritizes Authorization Independence by avoiding hierarchical
 * authorization dependencies and denormalizing data where necessary. It enforces
 * strict data ownership for write operations and allows public read access where appropriate.
 *
 * Data Structure:
 * The Firestore database consists of several top-level collections:
 * - /parties/{partyId}: Stores information about political parties.
 * - /candidates/{candidateId}: Stores information about candidates.
 * - /elections/{electionId}: Stores information about elections.
 * - /polling_data/{pollingDataId}: Stores polling data for elections.
 * - /constituencies/{constituencyId}: Stores information about constituencies.
 * - /election_results/{electionResultId}: Stores election results.
 * - /settings/pageLayouts: Stores user-defined layouts for various pages.
 *
 * Key Security Decisions:
 * - Public read access is granted to all collections to allow for open data consumption.
 * - Write access (create, update, delete) is denied to all collections, as there is no user authentication implemented to confirm ownership of data.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Grants read access to all parties and denies all write operations.
     * @path /parties/{partyId}
     * @allow get, list: if true;
     * @deny create: if false;
     * @deny update: if false;
     * @deny delete: if false;
     * @principle Allows public read access to party data, but denies all write operations.
     */
    match /parties/{partyId} {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Grants read access to all candidates and denies all write operations.
     * @path /candidates/{candidateId}
     * @allow get, list: if true;
     * @deny create: if false;
     * @deny update: if false;
     * @deny delete: if false;
     * @principle Allows public read access to candidate data, but denies all write operations.
     */
    match /candidates/{candidateId} {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Grants read access to all elections and denies all write operations.
     * @path /elections/{electionId}
     * @allow get, list: if true;
     * @deny create: if false;
     * @deny update: if false;
     * @deny delete: if false;
     * @principle Allows public read access to election data, but denies all write operations.
     */
    match /elections/{electionId} {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Grants read access to all polling data and denies all write operations.
     * @path /polling_data/{pollingDataId}
     * @allow get, list: if true;
     * @deny create: if false;
     * @deny update: if false;
     * @deny delete: if false;
     * @principle Allows public read access to polling data, but denies all write operations.
     */
    match /polling_data/{pollingDataId} {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Grants read access to all constituencies and denies all write operations.
     * @path /constituencies/{constituencyId}
     * @allow get, list: if true;
     * @deny create: if false;
     * @deny update: if false;
     * @deny delete: if false;
     * @principle Allows public read access to constituency data, but denies all write operations.
     */
    match /constituencies/{constituencyId} {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Grants read access to all election results and denies all write operations.
     * @path /election_results/{electionResultId}
     * @allow get, list: if true;
     * @deny create: if false;
     * @deny update: if false;
     * @deny delete: if false;
     * @principle Allows public read access to election result data, but denies all write operations.
     */
    match /election_results/{electionResultId} {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Grants read access to the page layouts and denies all write operations.
     * @path /settings/pageLayouts
     * @allow get, list: if true;
     * @deny create: if false;
     * @deny update: if false;
     * @deny delete: if false;
     * @principle Allows public read access to page layout settings, but denies all write operations.
     */
    match /settings/pageLayouts {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }
  }
}