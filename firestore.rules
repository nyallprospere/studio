/**
 * @fileoverview Firestore Security Rules for the political website.
 *
 * Core Philosophy:
 * This ruleset prioritizes security by default, restricting access unless explicitly granted.
 * It leverages simple, easily auditable rules based on ownership and role-based access control.
 * Data validation is relaxed to facilitate rapid prototyping.
 *
 * Data Structure:
 * - Top-level collections store core data like parties, candidates, elections, and news articles.
 * - Subcollections are used for nested data like comments on news articles.
 * - A single `settings` document stores global site settings and page layouts.
 *
 * Key Security Decisions:
 * - User listing is generally disallowed.
 * - The `settings` documents are read-only for non-authenticated users.
 * - Missing ownership fields will result in a `TODO` rule to prevent accidental open writes.
 *
 * Denormalization for Authorization:
 * - None explicitly needed given the current data structure and requirements.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to mailing list subscriber data.
     * @path /mailing_list_subscribers/{subscriberId}
     * @allow (create) request.auth != null - Allows any authenticated user to subscribe.
     * @allow (get) false - Prevents retrieving subscriber data.
     * @allow (list) false - Prevents listing subscriber data.
     * @allow (update) false - Prevents updating subscriber data.
     * @allow (delete) false - Prevents deleting subscriber data.
     * @principle Limits access to mailing list subscribers.
     */
    match /mailing_list_subscribers/{subscriberId} {
      allow get, list: if false;
      allow create: if isSignedIn();
      allow update, delete: if false;
    }

    /**
     * @description Controls access to political party data.
     * @path /parties/{partyId}
     * @allow (get, list) if true - Allows public read access to party data.
     * @allow (create, update, delete) if false - No write access allowed.
     * @principle Allows public read access but no write access.
     */
    match /parties/{partyId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Controls access to election-specific party logos.
     * @path /party_logos/{partyLogoId}
     * @allow (get, list) if true - Allows public read access to party logo data.
     * @allow (create, update, delete) if false - No write access allowed.
     * @principle Allows public read access but no write access.
     */
    match /party_logos/{partyLogoId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Controls access to political event data.
     * @path /events/{eventId}
     * @allow (get, list) if true - Allows public read access to event data.
     * @allow (create, update, delete) if false - No write access allowed.
     * @principle Allows public read access but no write access.
     */
    match /events/{eventId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Controls access to candidate data.
     * @path /candidates/{candidateId}
     * @allow (get, list) if true - Allows public read access to candidate data.
     * @allow (create, update, delete) if false - No write access allowed.
     * @principle Allows public read access but no write access.
     */
    match /candidates/{candidateId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Controls access to archived candidate data.
     * @path /archived_candidates/{archivedCandidateId}
     * @allow (get, list) if true - Allows public read access to archived candidate data.
     * @allow (create, update, delete) if false - No write access allowed.
     * @principle Allows public read access but no write access.
     */
    match /archived_candidates/{archivedCandidateId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Controls access to election data.
     * @path /elections/{electionId}
     * @allow (get, list) if true - Allows public read access to election data.
     * @allow (create, update, delete) if false - No write access allowed.
     * @principle Allows public read access but no write access.
     */
    match /elections/{electionId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Controls access to polling data.
     * @path /polling_data/{pollingDataId}
     * @allow (get, list) if true - Allows public read access to polling data.
     * @allow (create, update, delete) if false - No write access allowed.
     * @principle Allows public read access but no write access.
     */
    match /polling_data/{pollingDataId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Controls access to constituency data.
     * @path /constituencies/{constituencyId}
     * @allow (get, list) if true - Allows public read access to constituency data.
     * @allow (create, update, delete) if false - No write access allowed.
     * @principle Allows public read access but no write access.
     */
    match /constituencies/{constituencyId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Controls access to election result data.
     * @path /election_results/{electionResultId}
     * @allow (get, list) if true - Allows public read access to election result data.
     * @allow (create, update, delete) if false - No write access allowed.
     * @principle Allows public read access but no write access.
     */
    match /election_results/{electionResultId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Controls access to page layout settings.
     * @path /settings/pageLayouts
     * @allow (get) if true - Allows public read access to page layout settings.
     * @allow (list) if false -  Listing is not applicable for single documents.
     * @allow (create, update, delete) if false - No write access allowed.
     * @principle Allows public read access but no write access.
     */
    match /settings/pageLayouts {
      allow get: if true;
      allow list: if false;
      allow create, update, delete: if false;
    }

    /**
     * @description Controls access to global site settings.
     * @path /settings/site
     * @allow (get) if true - Allows public read access to site settings.
     * @allow (list) if false -  Listing is not applicable for single documents.
     * @allow (create, update, delete) if false - No write access allowed.
     * @principle Allows public read access but no write access.
     */
    match /settings/site {
      allow get: if true;
      allow list: if false;
      allow create, update, delete: if false;
    }

    /**
     * @description Controls access to user activity data.
     * @path /user_activity/{activityId}
     * @allow (create) if true - Allows anyone to create an activity log.
     * @allow (get, list, update, delete) if false - Prevents reading, listing, updating, or deleting activity data.
     * @principle Allows creation of activity logs, but no access to read or modify them.
     */
    match /user_activity/{activityId} {
      allow get, list, update, delete: if false;
      allow create: if true;
    }

    /**
     * @description Controls access to region data.
     * @path /regions/{regionId}
     * @allow (get, list) if true - Allows public read access to region data.
     * @allow (create, update, delete) if false - No write access allowed.
     * @principle Allows public read access but no write access.
     */
    match /regions/{regionId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Controls access to user-created prediction maps.
     * @path /user_maps/{userMapId}
     * @allow (create) if true - Allows anyone to create a user map.
     * @allow (get, list, update, delete) if false - Prevents reading, listing, updating, or deleting user maps.
     * @principle Allows creation of user maps, but no access to read or modify them.
     */
    match /user_maps/{userMapId} {
      allow get, list, update, delete: if false;
      allow create: if true;
    }

    /**
     * @description Controls access to ad listings.
     * @path /ads/{adId}
     * @allow (get, list) if true - Allows public read access to ad data.
     * @allow (create, update, delete) if false - No write access allowed.
     * @principle Allows public read access but no write access.
     */
    match /ads/{adId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Controls access to news articles.
     * @path /news/{newsId}
     * @allow (get, list) if true - Allows public read access to news articles.
     * @allow (create, update, delete) if false - No write access allowed.
     * @principle Allows public read access but no write access.
     */
    match /news/{newsId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Controls access to comments on news articles.
     * @path /news/{newsId}/comments/{commentId}
     * @allow (get, list) if true - Allows public read access to comments.
     * @allow (create) if isSignedIn() - Allows authenticated users to create comments.
     * @allow (update) if false - No updates are allowed
     * @allow (delete) if false - No one can delete an existing comment
     * @principle Allows public read access and authenticated users can create comments.
     */
    match /news/{newsId}/comments/{commentId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if false;
      allow delete: if false;
    }

      /**
       * @description Controls access to reported comments. Admins can only delete reports.
       * @path /reports/{reportId}
       */
      match /reports/{reportId} {
          allow get, list: if false;
          allow create, update: if false;
          allow delete: if isAdmin(); // Admins can delete reports.
      }

        match /users/{userId} {
            allow get: if request.auth.uid == userId;
            allow update: if request.auth.uid == userId;
            allow create: if request.auth.uid == userId && request.auth.uid == request.resource.data.userId;
            allow delete: if false;
            allow list: if false;
        }

  }

  function isSignedIn() {
    return request.auth != null;
  }

  function isOwner(userId) {
    return request.auth.uid == userId;
  }

    function isAdmin() {
        return request.auth.token.admin == true;
    }
}