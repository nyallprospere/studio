/**
 * @fileoverview Firestore Security Rules for the St. Lucia Elections Hub application.
 *
 * Core Philosophy:
 * This ruleset provides open read access to all collections while restricting write access. Write access is generally denied, as the application is intended for data consumption. However, in the `/settings/pageLayouts` path, it allows authenticated users to modify settings, supporting user-defined layouts.
 *
 * Data Structure:
 * The database contains top-level collections for parties, candidates, elections, polling data, constituencies, and election results. A single document at `/settings/pageLayouts` stores page layout configurations.
 *
 * Key Security Decisions:
 * - Public read access to all election-related data (parties, candidates, elections, etc.) to facilitate open data access.
 * - Restricted write access to prevent unauthorized data modification.
 * - Authenticated users can modify settings at `/settings/pageLayouts` to allow customization of the application's look and feel.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows anyone to read Parties; denies all writes.
     * @path /parties/{partyId}
     * @allow (get, list): if true
     * @deny (create, update, delete): if false
     * @principle Public read access, no write access.
     */
    match /parties/{partyId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read Candidates; denies all writes.
     * @path /candidates/{candidateId}
     * @allow (get, list): if true
     * @deny (create, update, delete): if false
     * @principle Public read access, no write access.
     */
    match /candidates/{candidateId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read Elections; denies all writes.
     * @path /elections/{electionId}
     * @allow (get, list): if true
     * @deny (create, update, delete): if false
     * @principle Public read access, no write access.
     */
    match /elections/{electionId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read PollingData; denies all writes.
     * @path /polling_data/{pollingDataId}
     * @allow (get, list): if true
     * @deny (create, update, delete): if false
     * @principle Public read access, no write access.
     */
    match /polling_data/{pollingDataId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read Constituencies; denies all writes.
     * @path /constituencies/{constituencyId}
     * @allow (get, list): if true
     * @deny (create, update, delete): if false
     * @principle Public read access, no write access.
     */
    match /constituencies/{constituencyId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read ElectionResults; denies all writes.
     * @path /election_results/{electionResultId}
     * @allow (get, list): if true
     * @deny (create, update, delete): if false
     * @principle Public read access, no write access.
     */
    match /election_results/{electionResultId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows authenticated users to read and modify page layouts.
     * @path /settings/pageLayouts
     * @allow (get): if true
     * @allow (create, update, delete): if isSignedIn()
     * @deny (list): if false
     * @principle Authenticated users can customize page layouts.
     */
    match /settings/pageLayouts {
      allow get: if true;
      allow create, update, delete: if isSignedIn();
      allow list: if false;
    }

    /**
     * @description Checks if the user is signed in.
     * @return {bool} True if the user is signed in, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }
  }
}