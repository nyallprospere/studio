/**
 * @fileoverview Firestore Security Rules for the Political App Prototype.
 *
 * Core Philosophy:
 * This ruleset prioritizes secure data access based on user authentication.
 * All write operations require a logged-in user.
 * Read operations are generally public unless a subcollection contains potentially private user information (like user activity).
 *
 * Data Structure:
 * The Firestore database is organized into top-level collections representing core entities
 * such as parties, candidates, elections, and constituencies. Each entity has a corresponding schema
 * that defines the expected data structure.
 *
 * Key Security Decisions:
 * - User listing is disabled.
 * - Schema validation is relaxed to facilitate rapid prototyping, focusing only on
 *   authorization-critical fields.
 * - Public read access is granted to most top-level collections to enable easy data consumption.
 *   Write access is restricted to authenticated users.
 * - User activity is logged but is not secured beyond requiring a valid login to write.
 *
 * Denormalization for Authorization:
 *  - Not used in this ruleset. In a production environment, consider denormalizing ownership
 *    or role information into documents to avoid costly `get()` operations in security rules.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Grants public read access and authenticated-user write access to party documents.
     * @path /parties/{partyId}
     * @allow (get, list): if true
     * @allow (create, update, delete): if isSignedIn()
     * @deny (create, update, delete): if !isSignedIn()
     * @principle Allows public read access while requiring authentication for write operations.
     */
    match /parties/{partyId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows any logged in user to upload party logos.
     * @path /party_logos/{partyLogoId}
     * @allow (get, list): if true
     * @allow (create, update, delete): if isSignedIn()
     * @deny (create, update, delete): if !isSignedIn()
     * @principle Public read, authenticated writes for party logos.
     */
    match /party_logos/{partyLogoId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Grants public read access and authenticated-user write access to event documents.
     * @path /events/{eventId}
     * @allow (get, list): if true
     * @allow (create, update, delete): if isSignedIn()
     * @deny (create, update, delete): if !isSignedIn()
     * @principle Allows public read access while requiring authentication for write operations.
     */
    match /events/{eventId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Grants public read access and authenticated-user write access to candidate documents.
     * @path /candidates/{candidateId}
     * @allow (get, list): if true
     * @allow (create, update, delete): if isSignedIn()
     * @deny (create, update, delete): if !isSignedIn()
     * @principle Allows public read access while requiring authentication for write operations.
     */
    match /candidates/{candidateId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Grants public read access and authenticated-user write access to archived candidate documents.
     * @path /archived_candidates/{archivedCandidateId}
     * @allow (get, list): if true
     * @allow (create, update, delete): if isSignedIn()
     * @deny (create, update, delete): if !isSignedIn()
     * @principle Allows public read access while requiring authentication for write operations.
     */
    match /archived_candidates/{archivedCandidateId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Grants public read access and authenticated-user write access to election documents.
     * @path /elections/{electionId}
     * @allow (get, list): if true
     * @allow (create, update, delete): if isSignedIn()
     * @deny (create, update, delete): if !isSignedIn()
     * @principle Allows public read access while requiring authentication for write operations.
     */
    match /elections/{electionId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Grants public read access and authenticated-user write access to polling data documents.
     * @path /polling_data/{pollingDataId}
     * @allow (get, list): if true
     * @allow (create, update, delete): if isSignedIn()
     * @deny (create, update, delete): if !isSignedIn()
     * @principle Allows public read access while requiring authentication for write operations.
     */
    match /polling_data/{pollingDataId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Grants public read access and authenticated-user write access to constituency documents.
     * @path /constituencies/{constituencyId}
     * @allow (get, list): if true
     * @allow (create, update, delete): if isSignedIn()
     * @deny (create, update, delete): if !isSignedIn()
     * @principle Allows public read access while requiring authentication for write operations.
     */
    match /constituencies/{constituencyId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Grants public read access and authenticated-user write access to election result documents.
     * @path /election_results/{electionResultId}
     * @allow (get, list): if true
     * @allow (create, update, delete): if isSignedIn()
     * @deny (create, update, delete): if !isSignedIn()
     * @principle Allows public read access while requiring authentication for write operations.
     */
    match /election_results/{electionResultId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Grants public read access and authenticated-user write access to page layouts settings.
     * @path /settings/pageLayouts
     * @allow (get, list): if true
     * @allow (create, update, delete): if isSignedIn()
     * @deny (create, update, delete): if !isSignedIn()
     * @principle Allows public read access while requiring authentication for write operations.
     */
    match /settings/pageLayouts {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Grants public read access and authenticated-user write access to site settings.
     * @path /settings/site
     * @allow (get, list): if true
     * @allow (create, update, delete): if isSignedIn()
     * @deny (create, update, delete): if !isSignedIn()
     * @principle Allows public read access while requiring authentication for write operations.
     */
    match /settings/site {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows any logged in user to create user activity logs. Read access is not secured beyond the top-level requirement of authentication.
     * @path /user_activity/{activityId}
     * @allow (get, list): if isSignedIn()
     * @allow (create, update, delete): if isSignedIn()
     * @deny (create, update, delete): if !isSignedIn()
     * @principle Requires user authentication for logging activity.
     */
    match /user_activity/{activityId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Denies all listing operations at the root to prevent collection discovery.
     * @path /
     * @allow list: if false
     * @deny list: if true
     * @principle Prevents unauthorized enumeration of collections.
     */
     match /{path=**}
{
      allow read, write: if false;
    }
  }

  /**
   * @description Checks if the user is signed in.
   * @return {boolean} True if the user is signed in, false otherwise.
   */
  function isSignedIn() {
    return request.auth != null;
  }
}