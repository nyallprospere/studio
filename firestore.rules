/**
 * @fileoverview Firestore Security Rules for the St. Lucia Elections Hub application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict owner-only access model for writes to all collections.
 * Read access is public for all collections.
 *
 * Data Structure:
 * The database consists of top-level collections for parties, candidates, elections,
 * polling data, constituencies, and election results.  Each document's ID within these
 * collections is used as its unique identifier.
 *
 * Key Security Decisions:
 * - Public read access is granted to all collections.
 * - Write access (create, update, delete) is restricted to authenticated users only.
 * - No specific authorization checks are implemented; all authenticated users can write
 *   to any document, which is suitable only for prototyping.
 * - Data validation is minimal, focusing on relational integrity where applicable.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Grants public read access and restricts write access to authenticated users for party information.
     * @path /parties/{partyId}
     * @allow get, list: if true;
     * @allow create: if isSignedIn();
     * @allow update: if isSignedIn() && resource != null;
     * @allow delete: if isSignedIn() && resource != null;
     * @deny create: if false;
     * @deny update: if false;
     * @deny delete: if false;
     * @principle Allows any authenticated user to create, update, and delete party information.
     */
    match /parties/{partyId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    /**
     * @description Grants public read access and restricts write access to authenticated users for candidate information.
     * @path /candidates/{candidateId}
     * @allow get, list: if true;
     * @allow create: if isSignedIn();
     * @allow update: if isSignedIn() && resource != null;
     * @allow delete: if isSignedIn() && resource != null;
     * @deny create: if false;
     * @deny update: if false;
     * @deny delete: if false;
     * @principle Allows any authenticated user to create, update, and delete candidate information.
     */
    match /candidates/{candidateId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    /**
     * @description Grants public read access and restricts write access to authenticated users for election information.
     * @path /elections/{electionId}
     * @allow get, list: if true;
     * @allow create: if isSignedIn();
     * @allow update: if isSignedIn() && resource != null;
     * @allow delete: if isSignedIn() && resource != null;
     * @deny create: if false;
     * @deny update: if false;
     * @deny delete: if false;
     * @principle Allows any authenticated user to create, update, and delete election information.
     */
    match /elections/{electionId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    /**
     * @description Grants public read access and restricts write access to authenticated users for polling data.
     * @path /polling_data/{pollingDataId}
     * @allow get, list: if true;
     * @allow create: if isSignedIn();
     * @allow update: if isSignedIn() && resource != null;
     * @allow delete: if isSignedIn() && resource != null;
     * @deny create: if false;
     * @deny update: if false;
     * @deny delete: if false;
     * @principle Allows any authenticated user to create, update, and delete polling data.
     */
    match /polling_data/{pollingDataId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    /**
     * @description Grants public read access and restricts write access to authenticated users for constituency information.
     * @path /constituencies/{constituencyId}
     * @allow get, list: if true;
     * @allow create: if isSignedIn();
     * @allow update: if isSignedIn() && resource != null;
     * @allow delete: if isSignedIn() && resource != null;
     * @deny create: if false;
     * @deny update: if false;
     * @deny delete: if false;
     * @principle Allows any authenticated user to create, update, and delete constituency information.
     */
    match /constituencies/{constituencyId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    /**
     * @description Grants public read access and restricts write access to authenticated users for election results.
     * @path /election_results/{electionResultId}
     * @allow get, list: if true;
     * @allow create: if isSignedIn();
     * @allow update: if isSignedIn() && resource != null;
     * @allow delete: if isSignedIn() && resource != null;
     * @deny create: if false;
     * @deny update: if false;
     * @deny delete: if false;
     * @principle Allows any authenticated user to create, update, and delete election results.
     */
    match /election_results/{electionResultId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }
  }

  function isSignedIn() {
    return request.auth != null;
  }
}