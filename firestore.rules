/**
 * @file Overview
 * This ruleset enforces a security model with varying levels of access based on the type of data.
 *
 * Data Structure:
 * - Top-level collections such as `parties`, `events`, `candidates`, `archived_candidates`, `elections`,
 *   `polling_data`, `constituencies`, `election_results`, `ads`, `news`, `regions`, and `user_maps` store
 *   general application data.
 * - The `settings` collection group contains `pageLayouts` and `site` documents for storing global settings.
 * - The `user_activity` collection stores user activity logs.
 *
 * Key Security Decisions:
 * - Access to `archived_candidates` collection is granted to all logged in users.
 * - All top-level collections are readable by anyone.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows anyone to read mailing list subscriber data, but restricts writes to only authenticated users.
     * @path /mailing_list_subscribers/{subscriberId}
     * @allow get, list: if true;
     * @allow create: if isSignedIn();
     * @allow update, delete: if false;
     * @deny create: if false;
     * @deny update: if true;
     * @deny delete: if true;
     * @principle Public read, authenticated-user write for mailing list subscription.
     */
    match /mailing_list_subscribers/{subscriberId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update, delete: if false;
    }

    /**
     * @description Allows anyone to read party data, but restricts writes.
     * @path /parties/{partyId}
     * @allow get, list: if true;
     * @allow create, update, delete: if false; // TODO: Add owner validation once the schema is updated with an ownership field.
     * @deny create: if true;
     * @deny update: if true;
     * @deny delete: if true;
     * @principle Public read-only access for party data.
     */
    match /parties/{partyId} {
      allow get, list: if true;
      allow create, update, delete: if false; // TODO: Add owner validation once the schema is updated with an ownership field.
    }

    /**
