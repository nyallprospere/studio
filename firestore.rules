/**
 * @file Overview
 * This ruleset enforces a security model that prioritizes explicit authorization.
 *
 * Data Structure:
 * The database contains collections for political data (parties, candidates, elections, constituencies, results, events),
 * site settings, user activity, user prediction maps, ads and mailing list subscribers.
 *
 * Key Security Decisions:
 * - Authenticated users can create ads.
 * - All other data is publicly readable.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Allows any user to read mailing list subscriber data, but restricts modifications.
     * @path /mailing_list_subscribers/{subscriberId}
     * @allow (get, list) - Public read access.
     * @deny (create, update, delete) - No write access.
     * @principle Public read access.
     */
    match /mailing_list_subscribers/{subscriberId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows any user to read party data, but restricts modifications.
     * @path /parties/{partyId}
     * @allow (get, list) - Public read access.
     * @deny (create, update, delete) - No write access.
     * @principle Public read access.
     */
    match /parties/{partyId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows any user to read party logo data, but restricts modifications.
     * @path /party_logos/{partyLogoId}
     * @allow (get, list) - Public read access.
     * @deny (create, update, delete) - No write access.
     * @principle Public read access.
     */
    match /party_logos/{partyLogoId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows any user to read event data, but restricts modifications.
     * @path /events/{eventId}
     * @allow (get, list) - Public read access.
     * @deny (create, update, delete) - No write access.
     * @principle Public read access.
     */
    match /events/{eventId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows any user to read candidate data, but restricts modifications.
     * @path /candidates/{candidateId}
     * @allow (get, list) - Public read access.
     * @deny (create, update, delete) - No write access.
     * @principle Public read access.
     */
    match /candidates/{candidateId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows any user to read archived candidate data, but restricts modifications.
     * @path /archived_candidates/{archivedCandidateId}
     * @allow (get, list) - Public read access.
     * @deny (create, update, delete) - No write access.
     * @principle Public read access.
     */
    match /archived_candidates/{archivedCandidateId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows any user to read election data, but restricts modifications.
     * @path /elections/{electionId}
     * @allow (get, list) - Public read access.
     * @deny (create, update, delete) - No write access.
     * @principle Public read access.
     */
    match /elections/{electionId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows any user to read polling data, but restricts modifications.
     * @path /polling_data/{pollingDataId}
     * @allow (get, list) - Public read access.
     * @deny (create, update, delete) - No write access.
     * @principle Public read access.
     */
    match /polling_data/{pollingDataId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows any user to read constituency data, but restricts modifications.
     * @path /constituencies/{constituencyId}
     * @allow (get, list) - Public read access.
     * @deny (create, update, delete) - No write access.
     * @principle Public read access.
     */
    match /constituencies/{constituencyId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows any user to read election result data, but restricts modifications.
     * @path /election_results/{electionResultId}
     * @allow (get, list) - Public read access.
     * @deny (create, update, delete) - No write access.
     * @principle Public read access.
     */
    match /election_results/{electionResultId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows any user to read page layout settings, but restricts modifications.
     * @path /settings/pageLayouts
     * @allow (get, list) - Public read access.
     * @deny (create, update, delete) - No write access.
     * @principle Public read access.
     */
    match /settings/pageLayouts {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows any user to read site settings, but restricts modifications.
     * @path /settings/site
     * @allow (get, list) - Public read access.
     * @deny (create, update, delete) - No write access.
     * @principle Public read access.
     */
    match /settings/site {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows any user to read user activity data, but restricts modifications.
     * @path /user_activity/{activityId}
     * @allow (get, list) - Public read access.
     * @deny (create, update, delete) - No write access.
     * @principle Public read access.
     */
    match /user_activity/{activityId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows any user to read region data, but restricts modifications.
     * @path /regions/{regionId}
     * @allow (get, list) - Public read access.
     * @deny (create, update, delete) - No write access.
     * @principle Public read access.
     */
    match /regions/{regionId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows any user to read user map data, but restricts modifications.
     * @path /user_maps/{userMapId}
     * @allow (get, list) - Public read access.
     * @deny (create, update, delete) - No write access.
     * @principle Public read access.
     */
    match /user_maps/{userMapId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows authenticated users to create ads, but restricts modifications and allows public read.
     * @path /ads/{adId}
     * @allow (get, list) - Public read access.
     * @allow (create) - Authenticated user can create ads.
     * @deny (update, delete) - No write access.
     * @principle Authenticated users can create ads.
     */
    match /ads/{adId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update, delete: if false;
    }
  }
}