/**
 * @fileOverview Firestore Security Rules for the St. Lucia Elections Hub application.
 *
 * Core Philosophy:
 * This ruleset prioritizes security by enforcing strict separation of concerns and explicit authorization checks.
 * It defaults to a deny-all policy and selectively grants access based on clearly defined conditions.
 * All write operations require authentication and are restricted to prevent unauthorized data modification or deletion.
 *
 * Data Structure:
 * The database consists of several top-level collections: `/parties`, `/candidates`, `/elections`, `/polling_data`, `/constituencies`, `/election_results`, `/settings/pageLayouts`, and `/settings/site`.
 * Each collection stores data related to its respective entity (e.g., `/parties` stores political party information).
 * Documents within each collection are identified by unique IDs. The two documents under `/settings` are singletons.
 *
 * Key Security Decisions:
 * - No user-specific data is stored, so ownership-based rules are not applicable.
 * - The ruleset does not grant list permissions to any collection, preventing unauthorized data scraping.
 * - All write operations are denied by default and require explicit granting.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Manages access to political party data.
     * @path /parties/{partyId}
     * @allow get: if true;
     * @allow create: if false;
     * @allow update: if false;
     * @allow delete: if false;
     * @deny list: Always deny listing parties
     * @principle Public read, no write access.
     */
    match /parties/{partyId} {
      allow get: if true;
      allow list: if false;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Manages access to candidate data.
     * @path /candidates/{candidateId}
     * @allow get: if true;
     * @allow create: if false;
     * @allow update: if false;
     * @allow delete: if false;
     * @deny list: Always deny listing candidates
     * @principle Public read, no write access.
     */
    match /candidates/{candidateId} {
      allow get: if true;
      allow list: if false;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Manages access to election data.
     * @path /elections/{electionId}
     * @allow get: if true;
     * @allow create: if false;
     * @allow update: if false;
     * @allow delete: if false;
     * @deny list: Always deny listing elections
     * @principle Public read, no write access.
     */
    match /elections/{electionId} {
      allow get: if true;
      allow list: if false;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Manages access to polling data.
     * @path /polling_data/{pollingDataId}
     * @allow get: if true;
     * @allow create: if false;
     * @allow update: if false;
     * @allow delete: if false;
     * @deny list: Always deny listing polling data
     * @principle Public read, no write access.
     */
    match /polling_data/{pollingDataId} {
      allow get: if true;
      allow list: if false;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Manages access to constituency data.
     * @path /constituencies/{constituencyId}
     * @allow get: if true;
     * @allow create: if false;
     * @allow update: if false;
     * @allow delete: if false;
     * @deny list: Always deny listing constituencies
     * @principle Public read, no write access.
     */
    match /constituencies/{constituencyId} {
      allow get: if true;
      allow list: if false;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Manages access to election result data.
     * @path /election_results/{electionResultId}
     * @allow get: if true;
     * @allow create: if false;
     * @allow update: if false;
     * @allow delete: if false;
     * @deny list: Always deny listing election results
     * @principle Public read, no write access.
     */
    match /election_results/{electionResultId} {
      allow get: if true;
      allow list: if false;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Manages access to page layouts settings.
     * @path /settings/pageLayouts
     * @allow get: if true;
     * @allow create: if false;
     * @allow update: if false;
     * @allow delete: if false;
     * @deny list:  Listing on a document returns nothing, deny it.
     * @principle Public read, no write access.
     */
    match /settings/pageLayouts {
      allow get: if true;
      allow list: if false;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Manages access to site settings.
     * @path /settings/site
     * @allow get: if true;
     * @allow create: if false;
     * @allow update: if false;
     * @allow delete: if false;
     * @deny list: Listing on a document returns nothing, deny it.
     * @principle Public read, no write access.
     */
    match /settings/site {
      allow get: if true;
      allow list: if false;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }
  }
}