/**
 * @fileoverview Firestore Security Rules for the St. Lucia Elections Hub application.
 *
 * Core Philosophy:
 * This ruleset provides basic authentication to all collections in the database.
 * All authenticated users can read and write to all collections.
 *
 * Data Structure:
 * - /parties/{partyId}: Stores political party information.
 * - /candidates/{candidateId}: Stores candidate information.
 * - /elections/{electionId}: Stores election event information.
 * - /polling_data/{pollingDataId}: Stores polling data.
 * - /constituencies/{constituencyId}: Stores constituency information.
 * - /election_results/{electionResultId}: Stores election results.
 * - /settings/pageLayouts: Stores page layout settings (single document).
 * - /settings/site: Stores global site settings (single document).
 *
 * Key Security Decisions:
 * - All collections are accessible for read and write by any authenticated user.
 * - No schema validation is performed beyond requiring authentication.
 * - No access controls based on roles or ownership are implemented.
 *
 * Denormalization for Authorization: N/A (basic authentication only)
 * Structural Segregation: The data is separated into collections based on entity type.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Grants any authenticated user read and write access to party data.
     * @path /parties/{partyId}
     * @allow (get, list) auth != null
     * @allow (create, update, delete) auth != null
     * @deny (create) auth == null
     * @deny (update) auth == null
     * @deny (delete) auth == null
     * @principle Allows any authenticated user to read and write party data.
     */
    match /parties/{partyId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Grants any authenticated user read and write access to candidate data.
     * @path /candidates/{candidateId}
     * @allow (get, list) auth != null
     * @allow (create, update, delete) auth != null
     * @deny (create) auth == null
     * @deny (update) auth == null
     * @deny (delete) auth == null
     * @principle Allows any authenticated user to read and write candidate data.
     */
    match /candidates/{candidateId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Grants any authenticated user read and write access to election data.
     * @path /elections/{electionId}
     * @allow (get, list) auth != null
     * @allow (create, update, delete) auth != null
     * @deny (create) auth == null
     * @deny (update) auth == null
     * @deny (delete) auth == null
     * @principle Allows any authenticated user to read and write election data.
     */
    match /elections/{electionId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Grants any authenticated user read and write access to polling data.
     * @path /polling_data/{pollingDataId}
     * @allow (get, list) auth != null
     * @allow (create, update, delete) auth != null
     * @deny (create) auth == null
     * @deny (update) auth == null
     * @deny (delete) auth == null
     * @principle Allows any authenticated user to read and write polling data.
     */
    match /polling_data/{pollingDataId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Grants any authenticated user read and write access to constituency data.
     * @path /constituencies/{constituencyId}
     * @allow (get, list) auth != null
     * @allow (create, update, delete) auth != null
     * @deny (create) auth == null
     * @deny (update) auth == null
     * @deny (delete) auth == null
     * @principle Allows any authenticated user to read and write constituency data.
     */
    match /constituencies/{constituencyId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Grants any authenticated user read and write access to election result data.
     * @path /election_results/{electionResultId}
     * @allow (get, list) auth != null
     * @allow (create, update, delete) auth != null
     * @deny (create) auth == null
     * @deny (update) auth == null
     * @deny (delete) auth == null
     * @principle Allows any authenticated user to read and write election result data.
     */
    match /election_results/{electionResultId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Grants any authenticated user read and write access to page layout settings.
     * @path /settings/pageLayouts
     * @allow (get, list) auth != null
     * @allow (create, update, delete) auth != null
     * @deny (create) auth == null
     * @deny (update) auth == null
     * @deny (delete) auth == null
     * @principle Allows any authenticated user to read and write page layout settings.
     */
    match /settings/pageLayouts {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Grants any authenticated user read and write access to site settings.
     * @path /settings/site
     * @allow (get, list) auth != null
     * @allow (create, update, delete) auth != null
     * @deny (create) auth == null
     * @deny (update) auth == null
     * @deny (delete) auth == null
     * @principle Allows any authenticated user to read and write site settings.
     */
    match /settings/site {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isSignedIn();
    }

  }

  function isSignedIn() {
    return request.auth != null;
  }

  function isOwner(userId) {
    return request.auth.uid == userId;
  }
}