/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a public-read, owner-write model for most collections,
 *              with authenticated users having read and write access.
 *
 * Data Structure:
 * - Top-level collections for core data entities (parties, candidates, constituencies, etc.).
 * - Single-document collections under `/settings` for global configurations.
 *
 * Key Security Decisions:
 * - All collections allow public reads (`get`, `list`).
 * - Write access (`create`, `update`, `delete`) is restricted to authenticated users.
 * - No user-specific data is stored, so there are no user-based ownership checks.
 * - `user_maps` collection now allows `list` operations to authenticated users.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows public read access to mailing list subscriber information, but restricts writes to authenticated users.
     * @path /mailing_list_subscribers/{subscriberId}
     * @allow (get, list): if true
     * @allow (create, update, delete): if isSignedIn()
     * @deny (create): if false
     * @principle Public read, authenticated write access.
     */
    match /mailing_list_subscribers/{subscriberId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows public read access to political party information, but restricts writes to authenticated users.
     * @path /parties/{partyId}
     * @allow (get, list): if true
     * @allow (create, update, delete): if isSignedIn()
     * @deny (create): if false
     * @principle Public read, authenticated write access.
     */
    match /parties/{partyId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows public read access to party logo information, but restricts writes to authenticated users.
     * @path /party_logos/{partyLogoId}
     * @allow (get, list): if true
     * @allow (create, update, delete): if isSignedIn()
     * @deny (create): if false
     * @principle Public read, authenticated write access.
     */
    match /party_logos/{partyLogoId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows public read access to event information, but restricts writes to authenticated users.
     * @path /events/{eventId}
     * @allow (get, list): if true
     * @allow (create, update, delete): if isSignedIn()
     * @deny (create): if false
     * @principle Public read, authenticated write access.
     */
    match /events/{eventId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows public read access to candidate information, but restricts writes to authenticated users.
     * @path /candidates/{candidateId}
     * @allow (get, list): if true
     * @allow (create, update, delete): if isSignedIn()
     * @deny (create): if false
     * @principle Public read, authenticated write access.
     */
    match /candidates/{candidateId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows public read access to archived candidate information, but restricts writes to authenticated users.
     * @path /archived_candidates/{archivedCandidateId}
     * @allow (get, list): if true
     * @allow (create, update, delete): if isSignedIn()
     * @deny (create): if false
     * @principle Public read, authenticated write access.
     */
    match /archived_candidates/{archivedCandidateId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows public read access to election information, but restricts writes to authenticated users.
     * @path /elections/{electionId}
     * @allow (get, list): if true
     * @allow (create, update, delete): if isSignedIn()
     * @deny (create): if false
     * @principle Public read, authenticated write access.
     */
    match /elections/{electionId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows public read access to polling data, but restricts writes to authenticated users.
     * @path /polling_data/{pollingDataId}
     * @allow (get, list): if true
     * @allow (create, update, delete): if isSignedIn()
     * @deny (create): if false
     * @principle Public read, authenticated write access.
     */
    match /polling_data/{pollingDataId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows public read access to constituency information, but restricts writes to authenticated users.
     * @path /constituencies/{constituencyId}
     * @allow (get, list): if true
     * @allow (create, update, delete): if isSignedIn()
     * @deny (create): if false
     * @principle Public read, authenticated write access.
     */
    match /constituencies/{constituencyId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows public read access to election result information, but restricts writes to authenticated users.
     * @path /election_results/{electionResultId}
     * @allow (get, list): if true
     * @allow (create, update, delete): if isSignedIn()
     * @deny (create): if false
     * @principle Public read, authenticated write access.
     */
    match /election_results/{electionResultId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows public read access to page layouts, but restricts writes to authenticated users. This collection contains a single document.
     * @path /settings/pageLayouts
     * @allow (get, list): if true
     * @allow (create, update, delete): if isSignedIn()
     * @deny (create): if false
     * @principle Public read, authenticated write access.
     */
    match /settings/pageLayouts {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows public read access to site settings, but restricts writes to authenticated users. This collection contains a single document.
     * @path /settings/site
     * @allow (get, list): if true
     * @allow (create, update, delete): if isSignedIn()
     * @deny (create): if false
     * @principle Public read, authenticated write access.
     */
    match /settings/site {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows public read access to user activity, but restricts writes to authenticated users.
     * @path /user_activity/{activityId}
     * @allow (get, list): if true
     * @allow (create, update, delete): if isSignedIn()
     * @deny (create): if false
     * @principle Public read, authenticated write access.
     */
    match /user_activity/{activityId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows public read access to region information, but restricts writes to authenticated users.
     * @path /regions/{regionId}
     * @allow (get, list): if true
     * @allow (create, update, delete): if isSignedIn()
     * @deny (create): if false
     * @principle Public read, authenticated write access.
     */
    match /regions/{regionId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

     /**
      * @description Allows authenticated users to read and write user-created prediction maps.
      * @path /user_maps/{userMapId}
      * @allow (get, list): if isSignedIn()
      * @allow (create, update, delete): if isSignedIn()
      * @deny (create): if false
      * @principle Authenticated users can read and write prediction maps.
      */
    match /user_maps/{userMapId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows public read access to ad listings, but restricts writes to authenticated users.
     * @path /ads/{adId}
     * @allow (get, list): if true
     * @allow (create, update, delete): if isSignedIn()
     * @deny (create): if false
     * @principle Public read, authenticated write access.
     */
    match /ads/{adId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows public read access to news articles, but restricts writes to authenticated users.
     * @path /news/{newsId}
     * @allow (get, list): if true
     * @allow (create, update, delete): if isSignedIn()
     * @deny (create): if false
     * @principle Public read, authenticated write access.
     */
    match /news/{newsId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    // ---- Helper functions ----
    function isSignedIn() {
      return request.auth != null;
    }
  }
}