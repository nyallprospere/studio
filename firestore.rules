/**
 * @fileoverview Firestore Security Rules for the Political App.
 *
 * Core Philosophy:
 * This ruleset provides public read access to most data collections while restricting write access.
 * Write access is either denied completely or requires authentication.
 * Schema validation is not enforced during this prototyping phase.
 *
 * Data Structure:
 * The Firestore database consists of several top-level collections such as `parties`, `events`, `candidates`, etc.
 * Each collection contains documents representing specific entities.
 * There is also a `/settings` document with sub-documents for `pageLayouts` and `site` configuration.
 *
 * Key Security Decisions:
 * - Public read access for `parties`, `events`, `candidates`, `elections`, `polling_data`, `constituencies`, `election_results`, `regions`.
 * - Restricted write access for all collections, requiring authentication for user-generated content.
 * - No user-specific data trees are enforced in this version.
 * - User data isn't stored, so `list` access is not restricted.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows anyone to read party information, but prohibits creation, updates, and deletion.
     * @path /parties/{partyId}
     * @allow get, list: if true;
     * @deny create: if false;
     * @deny update: if false;
     * @deny delete: if false;
     * @principle Public read access, no write access.
     */
    match /parties/{partyId} {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows anyone to read party logos, but prohibits creation, updates, and deletion.
     * @path /party_logos/{partyLogoId}
     * @allow get, list: if true;
     * @deny create: if false;
     * @deny update: if false;
     * @deny delete: if false;
     * @principle Public read access, no write access.
     */
    match /party_logos/{partyLogoId} {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows anyone to read event information, but prohibits creation, updates, and deletion.
     * @path /events/{eventId}
     * @allow get, list: if true;
     * @deny create: if false;
     * @deny update: if false;
     * @deny delete: if false;
     * @principle Public read access, no write access.
     */
    match /events/{eventId} {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows anyone to read candidate information, but prohibits creation, updates, and deletion.
     * @path /candidates/{candidateId}
     * @allow get, list: if true;
     * @deny create: if false;
     * @deny update: if false;
     * @deny delete: if false;
     * @principle Public read access, no write access.
     */
    match /candidates/{candidateId} {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows anyone to read archived candidate information, but prohibits creation, updates, and deletion.
     * @path /archived_candidates/{archivedCandidateId}
     * @allow get, list: if true;
     * @deny create: if false;
     * @deny update: if false;
     * @deny delete: if false;
     * @principle Public read access, no write access.
     */
    match /archived_candidates/{archivedCandidateId} {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows anyone to read election information, but prohibits creation, updates, and deletion.
     * @path /elections/{electionId}
     * @allow get, list: if true;
     * @deny create: if false;
     * @deny update: if false;
     * @deny delete: if false;
     * @principle Public read access, no write access.
     */
    match /elections/{electionId} {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows anyone to read polling data, but prohibits creation, updates, and deletion.
     * @path /polling_data/{pollingDataId}
     * @allow get, list: if true;
     * @deny create: if false;
     * @deny update: if false;
     * @deny delete: if false;
     * @principle Public read access, no write access.
     */
    match /polling_data/{pollingDataId} {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows anyone to read constituency information, but prohibits creation, updates, and deletion.
     * @path /constituencies/{constituencyId}
     * @allow get, list: if true;
     * @deny create: if false;
     * @deny update: if false;
     * @deny delete: if false;
     * @principle Public read access, no write access.
     */
    match /constituencies/{constituencyId} {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows anyone to read election results, but prohibits creation, updates, and deletion.
     * @path /election_results/{electionResultId}
     * @allow get, list: if true;
     * @deny create: if false;
     * @deny update: if false;
     * @deny delete: if false;
     * @principle Public read access, no write access.
     */
    match /election_results/{electionResultId} {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows anyone to read page layouts, but prohibits creation, updates, and deletion.
     * @path /settings/pageLayouts
     * @allow get, list: if true;
     * @deny create: if false;
     * @deny update: if false;
     * @deny delete: if false;
     * @principle Public read access, no write access.
     */
    match /settings/pageLayouts {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows anyone to read site settings, but prohibits creation, updates, and deletion.
     * @path /settings/site
     * @allow get, list: if true;
     * @deny create: if false;
     * @deny update: if false;
     * @deny delete: if false;
     * @principle Public read access, no write access.
     */
    match /settings/site {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows anyone to read user activity, but prohibits creation, updates, and deletion.
     * @path /user_activity/{activityId}
     * @allow get, list: if true;
     * @deny create: if false;
     * @deny update: if false;
     * @deny delete: if false;
     * @principle Public read access, no write access.
     */
    match /user_activity/{activityId} {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows anyone to read region information, but prohibits creation, updates, and deletion.
     * @path /regions/{regionId}
     * @allow get, list: if true;
     * @deny create: if false;
     * @deny update: if false;
     * @deny delete: if false;
     * @principle Public read access, no write access.
     */
    match /regions/{regionId} {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

      /**
       * @description Allows authenticated users to create user maps. Read access is public, while update and delete are forbidden.
       * @path /user_maps/{userMapId}
       * @allow get, list: if true;
       * @allow create: if isSignedIn();
       * @deny update: if false;
       * @deny delete: if false;
       * @principle Allows creating user maps when signed in.
       */
      match /user_maps/{userMapId} {
        allow get, list: if true;
        allow create: if isSignedIn();
        allow update: if false;
        allow delete: if false;
      }
  }

  function isSignedIn() {
    return request.auth != null;
  }
}