/**
 * @fileoverview Firestore Security Rules for St. Lucia Elections Hub.
 *
 * Core Philosophy:
 * This ruleset provides public read access to all data for logged-in users. Write access is not granted to any client.
 *
 * Data Structure:
 * The database consists of several top-level collections: /parties, /events, /candidates, /elections, /polling_data,
 * /constituencies, and /election_results. Additionally, there are two singleton documents under /settings:
 * /settings/pageLayouts and /settings/site.
 *
 * Key Security Decisions:
 * - All data is publicly readable for logged-in users.
 * - Write access (create, update, delete) is explicitly denied for all clients. This ensures data integrity
 *   and prevents unauthorized modifications.
 * - Listing all documents is allowed for logged-in users to facilitate data retrieval and display.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Grants read access to all parties for logged-in users, but denies all write access.
     * @path /parties/{partyId}
     * @allow get, list: if isSignedIn();
     * @allow create, update, delete: if false;
     * @deny create: if true;
     * @principle Public read access for all logged-in users, no write access.
     */
    match /parties/{partyId} {
      allow get, list: if isSignedIn();
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Grants read access to all events for logged-in users, but denies all write access.
     * @path /events/{eventId}
     * @allow get, list: if isSignedIn();
     * @allow create, update, delete: if false;
     * @deny create: if true;
     * @principle Public read access for all logged-in users, no write access.
     */
    match /events/{eventId} {
      allow get, list: if isSignedIn();
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Grants read access to all candidates for logged-in users, but denies all write access.
     * @path /candidates/{candidateId}
     * @allow get, list: if isSignedIn();
     * @allow create, update, delete: if false;
     * @deny create: if true;
     * @principle Public read access for all logged-in users, no write access.
     */
    match /candidates/{candidateId} {
      allow get, list: if isSignedIn();
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Grants read access to all elections for logged-in users, but denies all write access.
     * @path /elections/{electionId}
     * @allow get, list: if isSignedIn();
     * @allow create, update, delete: if false;
     * @deny create: if true;
     * @principle Public read access for all logged-in users, no write access.
     */
    match /elections/{electionId} {
      allow get, list: if isSignedIn();
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Grants read access to all polling data for logged-in users, but denies all write access.
     * @path /polling_data/{pollingDataId}
     * @allow get, list: if isSignedIn();
     * @allow create, update, delete: if false;
     * @deny create: if true;
     * @principle Public read access for all logged-in users, no write access.
     */
    match /polling_data/{pollingDataId} {
      allow get, list: if isSignedIn();
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Grants read access to all constituencies for logged-in users, but denies all write access.
     * @path /constituencies/{constituencyId}
     * @allow get, list: if isSignedIn();
     * @allow create, update, delete: if false;
     * @deny create: if true;
     * @principle Public read access for all logged-in users, no write access.
     */
    match /constituencies/{constituencyId} {
      allow get, list: if isSignedIn();
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Grants read access to all election results for logged-in users, but denies all write access.
     * @path /election_results/{electionResultId}
     * @allow get, list: if isSignedIn();
     * @allow create, update, delete: if false;
     * @deny create: if true;
     * @principle Public read access for all logged-in users, no write access.
     */
    match /election_results/{electionResultId} {
      allow get, list: if isSignedIn();
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Grants read access to the page layouts settings for logged-in users, but denies all write access.
     * @path /settings/pageLayouts
     * @allow get, list: if isSignedIn();
     * @allow create, update, delete: if false;
     * @deny create: if true;
     * @principle Public read access for all logged-in users, no write access.
     */
    match /settings/pageLayouts {
      allow get, list: if isSignedIn();
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Grants read access to the site settings for logged-in users, but denies all write access.
     * @path /settings/site
     * @allow get, list: if isSignedIn();
     * @allow create, update, delete: if false;
     * @deny create: if true;
     * @principle Public read access for all logged-in users, no write access.
     */
    match /settings/site {
      allow get, list: if isSignedIn();
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    function isSignedIn() {
      return request.auth != null;
    }
  }
}