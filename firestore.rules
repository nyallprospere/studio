/**
 * @fileoverview Firestore Security Rules for the St. Lucia Elections Hub application.
 *
 * Core Philosophy:
 * This ruleset provides open read access to all collections while restricting write access. Only authenticated users can create, update, or delete documents.
 *
 * Data Structure:
 * - Top-level collections for parties, events, candidates, elections, polling data, constituencies, and election results.
 * - Single documents within the /settings collection for page layouts and site settings.
 *
 * Key Security Decisions:
 * - Public read access is granted for all collections to allow for easy data consumption by the application.
 * - Write access is restricted to authenticated users.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows public read access and authenticated-user-only write access for party data.
     * @path /parties/{partyId}
     * @allow get, list: if true;
     * @allow create: if isSignedIn();
     * @allow update: if isSignedIn() && resource != null;
     * @allow delete: if isSignedIn() && resource != null;
     * @deny create: if false;
     * @deny update: if false;
     * @deny delete: if false;
     * @principle Allows any user to read party information, but only authenticated users can create, update, or delete parties.
     */
    match /parties/{partyId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    /**
     * @description Allows public read access and authenticated-user-only write access for event data.
     * @path /events/{eventId}
     * @allow get, list: if true;
     * @allow create: if isSignedIn();
     * @allow update: if isSignedIn() && resource != null;
     * @allow delete: if isSignedIn() && resource != null;
     * @deny create: if false;
     * @deny update: if false;
     * @deny delete: if false;
     * @principle Allows any user to read event information, but only authenticated users can create, update, or delete events.
     */
    match /events/{eventId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    /**
     * @description Allows public read access and authenticated-user-only write access for candidate data.
     * @path /candidates/{candidateId}
     * @allow get, list: if true;
     * @allow create: if isSignedIn();
     * @allow update: if isSignedIn() && resource != null;
     * @allow delete: if isSignedIn() && resource != null;
     * @deny create: if false;
     * @deny update: if false;
     * @deny delete: if false;
     * @principle Allows any user to read candidate information, but only authenticated users can create, update, or delete candidates.
     */
    match /candidates/{candidateId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    /**
     * @description Allows public read access and authenticated-user-only write access for election data.
     * @path /elections/{electionId}
     * @allow get, list: if true;
     * @allow create: if isSignedIn();
     * @allow update: if isSignedIn() && resource != null;
     * @allow delete: if isSignedIn() && resource != null;
     * @deny create: if false;
     * @deny update: if false;
     * @deny delete: if false;
     * @principle Allows any user to read election information, but only authenticated users can create, update, or delete elections.
     */
    match /elections/{electionId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    /**
     * @description Allows public read access and authenticated-user-only write access for polling data.
     * @path /polling_data/{pollingDataId}
     * @allow get, list: if true;
     * @allow create: if isSignedIn();
     * @allow update: if isSignedIn() && resource != null;
     * @allow delete: if isSignedIn() && resource != null;
     * @deny create: if false;
     * @deny update: if false;
     * @deny delete: if false;
     * @principle Allows any user to read polling data, but only authenticated users can create, update, or delete polling data.
     */
    match /polling_data/{pollingDataId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    /**
     * @description Allows public read access and authenticated-user-only write access for constituency data.
     * @path /constituencies/{constituencyId}
     * @allow get, list: if true;
     * @allow create: if isSignedIn();
     * @allow update: if isSignedIn() && resource != null;
     * @allow delete: if isSignedIn() && resource != null;
     * @deny create: if false;
     * @deny update: if false;
     * @deny delete: if false;
     * @principle Allows any user to read constituency information, but only authenticated users can create, update, or delete constituencies.
     */
    match /constituencies/{constituencyId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    /**
     * @description Allows public read access and authenticated-user-only write access for election result data.
     * @path /election_results/{electionResultId}
     * @allow get, list: if true;
     * @allow create: if isSignedIn();
     * @allow update: if isSignedIn() && resource != null;
     * @allow delete: if isSignedIn() && resource != null;
     * @deny create: if false;
     * @deny update: if false;
     * @deny delete: if false;
     * @principle Allows any user to read election results, but only authenticated users can create, update, or delete election results.
     */
    match /election_results/{electionResultId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    /**
     * @description Allows public read access and authenticated-user-only write access for page layout settings.
     * @path /settings/pageLayouts
     * @allow get: if true;
     * @allow list: if false;
     * @allow create: if isSignedIn();
     * @allow update: if isSignedIn() && resource != null;
     * @allow delete: if isSignedIn() && resource != null;
     * @deny create: if false;
     * @deny update: if false;
     * @deny delete: if false;
     * @principle Allows any user to read page layout settings, but only authenticated users can create, update, or delete them.  Listing is disallowed as this is a single document.
     */
    match /settings/pageLayouts {
      allow get: if true;
      allow list: if false;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    /**
     * @description Allows public read access and authenticated-user-only write access for site settings.
     * @path /settings/site
     * @allow get: if true;
     * @allow list: if false;
     * @allow create: if isSignedIn();
     * @allow update: if isSignedIn() && resource != null;
     * @allow delete: if isSignedIn() && resource != null;
     * @deny create: if false;
     * @deny update: if false;
     * @deny delete: if false;
     * @principle Allows any user to read site settings, but only authenticated users can create, update, or delete them. Listing is disallowed as this is a single document.
     */
    match /settings/site {
      allow get: if true;
      allow list: if false;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    function isSignedIn() {
      return request.auth != null;
    }
  }
}