/**
 * @fileoverview Firestore Security Rules for the St. Lucia Elections Hub application.
 *
 * Core Philosophy:
 * This ruleset grants read access to all logged-in users for all collections, and prohibits all write access.
 *
 * Data Structure:
 * - The database consists of several top-level collections: `parties`, `events`, `candidates`, `elections`, `polling_data`, `constituencies`, and `election_results`.
 * - There are also two singleton documents under `/settings`: `pageLayouts` and `site`.
 *
 * Key Security Decisions:
 * - All data is readable by any authenticated user.
 * - No write operations are allowed under any circumstances.
 * - No ownership checks or role-based access control are enforced.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Grants read access to Party documents for all logged-in users, but denies all write operations.
     * @path /parties/{partyId}
     * @allow get, list: if isSignedIn();
     * @deny create, update, delete: if false;
     * @principle Allows any logged-in user to read party information.  Write operations are forbidden.
     */
    match /parties/{partyId} {
      allow get, list: if isSignedIn();
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Grants read access to Event documents for all logged-in users, but denies all write operations.
     * @path /events/{eventId}
     * @allow get, list: if isSignedIn();
     * @deny create, update, delete: if false;
     * @principle Allows any logged-in user to read event information. Write operations are forbidden.
     */
    match /events/{eventId} {
      allow get, list: if isSignedIn();
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Grants read access to Candidate documents for all logged-in users, but denies all write operations.
     * @path /candidates/{candidateId}
     * @allow get, list: if isSignedIn();
     * @deny create, update, delete: if false;
     * @principle Allows any logged-in user to read candidate information. Write operations are forbidden.
     */
    match /candidates/{candidateId} {
      allow get, list: if isSignedIn();
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Grants read access to Election documents for all logged-in users, but denies all write operations.
     * @path /elections/{electionId}
     * @allow get, list: if isSignedIn();
     * @deny create, update, delete: if false;
     * @principle Allows any logged-in user to read election information. Write operations are forbidden.
     */
    match /elections/{electionId} {
      allow get, list: if isSignedIn();
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Grants read access to PollingData documents for all logged-in users, but denies all write operations.
     * @path /polling_data/{pollingDataId}
     * @allow get, list: if isSignedIn();
     * @deny create, update, delete: if false;
     * @principle Allows any logged-in user to read polling data. Write operations are forbidden.
     */
    match /polling_data/{pollingDataId} {
      allow get, list: if isSignedIn();
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Grants read access to Constituency documents for all logged-in users, but denies all write operations.
     * @path /constituencies/{constituencyId}
     * @allow get, list: if isSignedIn();
     * @deny create, update, delete: if false;
     * @principle Allows any logged-in user to read constituency information. Write operations are forbidden.
     */
    match /constituencies/{constituencyId} {
      allow get, list: if isSignedIn();
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Grants read access to ElectionResult documents for all logged-in users, but denies all write operations.
     * @path /election_results/{electionResultId}
     * @allow get, list: if isSignedIn();
     * @deny create, update, delete: if false;
     * @principle Allows any logged-in user to read election results. Write operations are forbidden.
     */
    match /election_results/{electionResultId} {
      allow get, list: if isSignedIn();
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

     /**
      * @description Grants read access to the PageLayouts document for all logged-in users, but denies all write operations.
      * @path /settings/pageLayouts
      * @allow get: if isSignedIn();
      * @deny create, update, delete, list: if false;
      * @principle Allows any logged-in user to read page layout settings. Write operations are forbidden.  List is denied since this is a singleton.
      */
    match /settings/pageLayouts {
      allow get: if isSignedIn();
      allow list: if false;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Grants read access to the SiteSettings document for all logged-in users, but denies all write operations.
     * @path /settings/site
     * @allow get: if isSignedIn();
     * @deny create, update, delete, list: if false;
     * @principle Allows any logged-in user to read site settings. Write operations are forbidden. List is denied since this is a singleton.
     */
    match /settings/site {
      allow get: if isSignedIn();
      allow list: if false;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }
  }

  function isSignedIn() {
    return request.auth != null;
  }
}