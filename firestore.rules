rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Grants read access to all parties and denies all write operations.
     * @path /parties/{partyId}
     * @allow get, list: if isSignedIn();
     * @deny create, update, delete: if true;
     * @principle Allows any authenticated user to read party information; write operations are not permitted.
     */
    match /parties/{partyId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Grants read access to all candidates and denies all write operations.
     * @path /candidates/{candidateId}
     * @allow get, list: if isSignedIn();
     * @deny create, update, delete: if true;
     * @principle Allows any authenticated user to read candidate information; write operations are not permitted.
     */
    match /candidates/{candidateId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Grants read access to all elections and denies all write operations.
     * @path /elections/{electionId}
     * @allow get, list: if isSignedIn();
     * @deny create, update, delete: if true;
     * @principle Allows any authenticated user to read election information; write operations are not permitted.
     */
    match /elections/{electionId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Grants read access to all polling data and denies all write operations.
     * @path /polling_data/{pollingDataId}
     * @allow get, list: if isSignedIn();
     * @deny create, update, delete: if true;
     * @principle Allows any authenticated user to read polling data; write operations are not permitted.
     */
    match /polling_data/{pollingDataId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Grants read access to all constituencies and denies all write operations.
     * @path /constituencies/{constituencyId}
     * @allow get, list: if isSignedIn();
     * @deny create, update, delete: if true;
     * @principle Allows any authenticated user to read constituency information; write operations are not permitted.
     */
    match /constituencies/{constituencyId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Grants read access to all election results and denies all write operations.
     * @path /election_results/{electionResultId}
     * @allow get, list: if isSignedIn();
     * @deny create, update, delete: if true;
     * @principle Allows any authenticated user to read election results; write operations are not permitted.
     */
    match /election_results/{electionResultId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

     /**
      * @description Grants read access to page layout settings and denies all write operations.
      * @path /settings/pageLayouts
      * @allow get: if isSignedIn();
      * @deny create, update, delete: if true;
      * @principle Allows any authenticated user to read page layout settings; write operations are not permitted.
      */
    match /settings/{document=**} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    //------------------- Helper functions -------------------

    /**
     * @description Checks if the user is signed in.
     * @return {bool} True if the user is signed in, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the user ID matches the requested user ID.
     * @param {string} userId The user ID to check against.
     * @return {bool} True if the user ID matches, false otherwise.
     */
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    /**
     * @description Checks if the user ID matches the existing document's owner ID.
     * @param {string} userId The user ID to check against.
     * @return {bool} True if the user ID matches and the document exists, false otherwise.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource.data != null;
    }
  }
}