    /**
     * @description Rules for the news collection.
     * @path /news/{newsId}
     * @allow (create) User is signed in.
     * @deny (create) User is not signed in.
     * @principle Requires authentication for write access.
     */
    match /news/{newsId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if false;
      allow delete: if false;
      
       /**
         * @description Rules for the comments subcollection under a news article.
         * @path /news/{newsId}/comments/{commentId}
         */
      match /comments/{commentId} {
        allow get, list: if isSignedIn();
        allow create: if isSignedIn();
        allow update: if false;
        allow delete: if false;
      }
    }

    /**
     * @description Rules for the reports collection.
     * @path /reports/{reportId}
     * @allow (create) User is signed in.
     * @deny (create) User is not signed in.
     * @principle Requires authentication for write access.
     */
    match /reports/{reportId} {
        allow get, list: if isSignedIn();
        allow create: if isSignedIn();
        allow update: if false;
        allow delete: if false;
    }
  }
}