/**
 * @fileoverview Firestore Security Rules for the St. Lucia Elections Hub application.
 *
 * Core Philosophy:
 * This ruleset provides basic protection against unauthorized data access and modification.
 * It uses a role-based access control pattern, where only authenticated users can create and
 * update specific documents. Read access to some collections is public, while write access
 * is restricted.
 *
 * Data Structure:
 * The Firestore database is structured into collections for parties, events, candidates,
 * archived candidates, elections, polling data, constituencies, and election results.
 * There are also collections for user activity, page layouts, and site settings.
 * Each collection uses a flat structure with document IDs generated by the client.
 *
 * Key Security Decisions:
 * - Public read access is granted to the parties, events, candidates, archived candidates, elections, polling data, constituencies, election results.
 * - Write access to these collections is restricted to authorized users (e.g., admins).
 * - The `settings` collection stores page layouts and site settings, with restricted write access.
 * - The `user_activity` collection stores user activity events, with write access restricted to authenticated users.
 *
 * Denormalization for Authorization:
 * This ruleset does not currently implement data denormalization.
 *
 * Structural Segregation:
 * Data with different access requirements is stored in separate collections.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows anyone to read parties, but only allows authenticated users to create, update, and delete them.
     * @path /parties/{partyId}
     * @allow get, list: if true;
     * @allow create: if isSignedIn();
     * @allow update: if isSignedIn() && resource != null;
     * @allow delete: if isSignedIn() && resource != null;
     * @deny get: if false;
     * @deny list: if false;
     * @principle Allows public read access to party information while restricting write access to authenticated users.
     */
    match /parties/{partyId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    /**
     * @description Allows anyone to read events, but only allows authenticated users to create, update, and delete them.
     * @path /events/{eventId}
     * @allow get, list: if true;
     * @allow create: if isSignedIn();
     * @allow update: if isSignedIn() && resource != null;
     * @allow delete: if isSignedIn() && resource != null;
     * @deny get: if false;
     * @deny list: if false;
     * @principle Allows public read access to event information while restricting write access to authenticated users.
     */
    match /events/{eventId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    /**
     * @description Allows anyone to read candidates, but only allows authenticated users to create, update, and delete them.
     * @path /candidates/{candidateId}
     * @allow get, list: if true;
     * @allow create: if isSignedIn();
     * @allow update: if isSignedIn() && resource != null;
     * @allow delete: if isSignedIn() && resource != null;
     * @deny get: if false;
     * @deny list: if false;
     * @principle Allows public read access to candidate information while restricting write access to authenticated users.
     */
    match /candidates/{candidateId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    /**
     * @description Allows anyone to read archived candidates, but only allows authenticated users to create, update, and delete them.
     * @path /archived_candidates/{archivedCandidateId}
     * @allow get, list: if true;
     * @allow create: if isSignedIn();
     * @allow update: if isSignedIn() && resource != null;
     * @allow delete: if isSignedIn() && resource != null;
     * @deny get: if false;
     * @deny list: if false;
     * @principle Allows public read access to archived candidate information while restricting write access to authenticated users.
     */
    match /archived_candidates/{archivedCandidateId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    /**
     * @description Allows anyone to read elections, but only allows authenticated users to create, update, and delete them.
     * @path /elections/{electionId}
     * @allow get, list: if true;
     * @allow create: if isSignedIn();
     * @allow update: if isSignedIn() && resource != null;
     * @allow delete: if isSignedIn() && resource != null;
     * @deny get: if false;
     * @deny list: if false;
     * @principle Allows public read access to election information while restricting write access to authenticated users.
     */
    match /elections/{electionId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    /**
     * @description Allows anyone to read polling data, but only allows authenticated users to create, update, and delete them.
     * @path /polling_data/{pollingDataId}
     * @allow get, list: if true;
     * @allow create: if isSignedIn();
     * @allow update: if isSignedIn() && resource != null;
     * @allow delete: if isSignedIn() && resource != null;
     * @deny get: if false;
     * @deny list: if false;
     * @principle Allows public read access to polling data while restricting write access to authenticated users.
     */
    match /polling_data/{pollingDataId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    /**
     * @description Allows anyone to read constituencies, but only allows authenticated users to create, update, and delete them.
     * @path /constituencies/{constituencyId}
     * @allow get, list: if true;
     * @allow create: if isSignedIn();
     * @allow update: if isSignedIn() && resource != null;
     * @allow delete: if isSignedIn() && resource != null;
     * @deny get: if false;
     * @deny list: if false;
     * @principle Allows public read access to constituency information while restricting write access to authenticated users.
     */
    match /constituencies/{constituencyId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    /**
     * @description Allows anyone to read election results, but only allows authenticated users to create, update, and delete them.
     * @path /election_results/{electionResultId}
     * @allow get, list: if true;
     * @allow create: if isSignedIn();
     * @allow update: if isSignedIn() && resource != null;
     * @allow delete: if isSignedIn() && resource != null;
     * @deny get: if false;
     * @deny list: if false;
     * @principle Allows public read access to election results while restricting write access to authenticated users.
     */
    match /election_results/{electionResultId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    /**
     * @description Restricts read and write access to page layouts to authenticated users.
     * @path /settings/pageLayouts
     */
    match /settings/pageLayouts {
      allow get: if isSignedIn();
      allow list: if false;
      allow create: if false;
      allow update: if isSignedIn() && resource != null;
      allow delete: if false;
    }

    /**
     * @description Restricts read and write access to site settings to authenticated users.
     * @path /settings/site
     */
    match /settings/site {
      allow get: if isSignedIn();
      allow list: if false;
      allow create: if false;
      allow update: if isSignedIn() && resource != null;
      allow delete: if false;
    }

    /**
     * @description Allows authenticated users to create user activity logs.
     * @path /user_activity/{activityId}
     */
    match /user_activity/{activityId} {
      allow get: if false;
      allow list: if false;
      allow create: if isSignedIn();
      allow update: if false;
      allow delete: if false;
    }
  }

  function isSignedIn() {
    return request.auth != null;
  }
}