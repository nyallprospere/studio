
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files
    // This is necessary for images and other assets to be visible on the public website
    match /{allPaths=**} {
      allow read;
    }

    // Restrict write access (uploads, updates, deletes) to authenticated users
    // This ensures only logged-in administrators can modify files
    match /candidate-photos/{allPaths=**} {
      allow write: if request.auth != null;
    }

    match /party-logos/{allPaths=**} {
      allow write: if request.auth != null;
    }
    
    match /party-manifestos/{allPaths=**} {
      allow write: if request.auth != null;
    }

    match /maps/{allPaths=**} {
      allow write: if request.auth != null;
    }

    match /election-results-imports/{allPaths=**} {
        allow write: if request.auth != null;
    }
  }
}
