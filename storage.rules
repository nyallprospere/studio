rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all files by default
    match /{allPaths=**} {
      allow read;
    }
    
    // Allow write access (create, update, delete) only to authenticated users
    // in specific folders like 'candidates', 'logos', 'events', 'parties', 'maps', 'news', 'SavedMaps', etc.
    match /(candidates|logos|events|parties|maps|news|SavedMaps|constituency-logos|leaders)/{allPaths=**} {
        allow write: if request.auth != null;
    }
  }
}
