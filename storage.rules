rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files.
    // This allows anyone to view images, logos, and manifestos.
    match /{allPaths=**} {
      allow read;
    }

    // Allow authenticated users to upload files to specific folders.
    // This secures your storage by only allowing logged-in admins to add/update files.
    match /candidate-photos/{allPaths=**} {
      allow write: if request.auth != null;
    }
    match /party-logos/{allPaths=**} {
      allow write: if request.auth != null;
    }
    match /party-manifestos/{allPaths=**} {
      allow write: if request.auth != null;
    }
    match /election-results-imports/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
