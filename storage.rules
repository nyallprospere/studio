rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files.
    match /{allPaths=**} {
      allow read: if true;
    }

    // Allow write access only for authenticated users.
    // This is a basic rule; you might want to restrict by file type, size, or path.
    match /{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
